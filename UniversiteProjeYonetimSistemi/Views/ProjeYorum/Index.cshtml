@model IEnumerable<UniversiteProjeYonetimSistemi.Models.ProjeYorum>

@{
    ViewData["Title"] = "Proje Yorumları";
    var projeId = Model.FirstOrDefault()?.ProjeId ?? 0;
}

<div class="container py-4 animate-header">
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm animate-card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Proje Yorumları</h5>
                    <div class="d-flex gap-2">
                        <a asp-controller="Proje" asp-action="Details" asp-route-id="@projeId" class="btn btn-outline-light btn-sm animate-button">
                            <i class="fas fa-arrow-left me-2"></i>Projeye Dön
                        </a>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-comments fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Henüz yorum yapılmamış</h5>
                            <p class="text-muted">Bu proje için henüz herhangi bir yorum yapılmamış.</p>
                            <a asp-controller="Proje" asp-action="Details" asp-route-id="@projeId" asp-route-highlightYorum="true" class="btn btn-primary animate-button">
                                <i class="fas fa-plus me-2"></i>İlk Yorumu Ekle
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Yorum Yapan</th>
                                        <th>Tip</th>
                                        <th>İçerik</th>
                                        <th>Tarih</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var yorum in Model.OrderByDescending(y => y.OlusturmaTarihi))
                                    {
                                        <tr class="animate-row">
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (yorum.Ogrenci != null)
                                                    {
                                                        <i class="fas fa-user-graduate me-2 text-success"></i>
                                                        <strong>@yorum.Ogrenci.Ad @yorum.Ogrenci.Soyad</strong>
                                                        <span class="badge bg-success ms-2">Öğrenci</span>
                                                    }
                                                    else if (yorum.Akademisyen != null)
                                                    {
                                                        <i class="fas fa-user-tie me-2 text-primary"></i>
                                                        <strong>@yorum.Akademisyen.Unvan @yorum.Akademisyen.Ad @yorum.Akademisyen.Soyad</strong>
                                                        <span class="badge bg-primary ms-2">Akademisyen</span>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                @{
                                                    var tipClass = yorum.YorumTipi switch
                                                    {
                                                        "Geri Bildirim" => "bg-warning",
                                                        "Soru" => "bg-info",
                                                        "Onay" => "bg-success",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @tipClass">@yorum.YorumTipi</span>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(yorum.Icerik))
                                                {
                                                    <span>@(yorum.Icerik.Length > 50 ? yorum.Icerik.Substring(0, 50) + "..." : yorum.Icerik)</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">İçerik yok</span>
                                                }
                                            </td>
                                            <td>
                                                @yorum.OlusturmaTarihi.ToString("dd/MM/yyyy HH:mm")
                                            </td>
                                            <td>
                                                <form asp-controller="ProjeYorum" asp-action="Delete" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@yorum.Id" />
                                                    <input type="hidden" name="projeId" value="@yorum.ProjeId" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Bu yorumu silmek istediğinizden emin misiniz?')">
                                                        <i class="fas fa-trash me-1"></i>Sil
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .animate-row {
        transition: all 0.3s ease;
    }
    
    .animate-row:hover {
        background-color: #f8f9fa;
        transform: translateX(5px);
    }
</style> 