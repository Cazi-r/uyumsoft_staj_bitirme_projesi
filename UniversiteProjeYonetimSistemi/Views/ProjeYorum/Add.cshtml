@model UniversiteProjeYonetimSistemi.Models.ViewModels.ProjeYorumViewModel

@{
    ViewData["Title"] = "Yorum Ekle";
    var projeId = Context.Request.Query["projeId"].ToString();
}

<div class="container py-4 animate-header">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card border-0 shadow-sm animate-card">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-plus me-2"></i>Yorum Ekle
                        </h5>
                        <a asp-controller="Proje" asp-action="Details" asp-route-id="@projeId" class="btn btn-outline-light btn-sm animate-button">
                            <i class="fas fa-arrow-left me-2"></i>Projeye Dön
                        </a>
                    </div>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="ProjeYorum" asp-action="Add" method="post" class="animate-form">
                        <input type="hidden" name="ProjeId" value="@projeId" />

                        <div class="mb-4">
                            <label class="form-label">
                                <i class="fas fa-tag me-1"></i>Yorum Tipi
                            </label>
                            <select class="form-select" name="YorumTipi" required>
                                <option value="">Seçiniz...</option>
                                <option value="Genel">Genel</option>
                                <option value="Geri Bildirim">Geri Bildirim</option>
                                <option value="Soru">Soru</option>
                                <option value="Onay">Onay</option>
                            </select>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">
                                <i class="fas fa-comment me-1"></i>Yorumunuz
                            </label>
                            <textarea class="form-control" name="Icerik" rows="6" placeholder="Yorumunuzu yazınız..." required></textarea>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>
                                Yorumunuzda proje ile ilgili görüşlerinizi, sorularınızı veya önerilerinizi belirtiniz.
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-controller="Proje" asp-action="Details" asp-route-id="@projeId" class="btn btn-secondary animate-button">
                                <i class="fas fa-arrow-left me-2"></i>Vazgeç
                            </a>
                            <button type="submit" class="btn btn-primary animate-button">
                                <i class="fas fa-plus me-2"></i>Yorumu Ekle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 