@model UniversiteProjeYonetimSistemi.Models.ViewModels.ProjeKaynagiViewModel

@{
    ViewData["Title"] = "Kaynak Ekle";
}

<div class="container mt-4">
    <div class="card animate-card">
        <div class="card-header">
            <h4 class="mb-0">Yeni Kaynak Ekle</h4>
            <p class="text-muted mb-0">Proje: <strong>@ViewBag.ProjeAdi</strong></p>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProjeId" />

                <div class="form-group mb-3">
                    <label asp-for="KaynakAdi" class="control-label">Kaynak Adı</label>
                    <input asp-for="KaynakAdi" class="form-control" />
                    <span asp-validation-for="KaynakAdi" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="KaynakTipi" class="control-label">Kaynak Türü</label>
                    <select asp-for="KaynakTipi" class="form-control">
                        <option value="">Seçiniz...</option>
                        @foreach (var tip in ViewBag.KaynakTipleri)
                        {
                            <option value="@tip">@tip</option>
                        }
                    </select>
                    <span asp-validation-for="KaynakTipi" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Url" class="control-label">URL</label>
                    <input asp-for="Url" class="form-control" />
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Yazar" class="control-label">Yazar</label>
                    <input asp-for="Yazar" class="form-control" />
                    <span asp-validation-for="Yazar" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="YayinTarihi" class="control-label">Yayın Tarihi</label>
                    <input asp-for="YayinTarihi" class="form-control" type="date" />
                    <span asp-validation-for="YayinTarihi" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Aciklama" class="control-label">Açıklama</label>
                    <textarea asp-for="Aciklama" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Aciklama" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Ekle" class="btn btn-primary" />
                    <a asp-controller="Proje" asp-action="Details" asp-route-id="@Model.ProjeId" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // URL alanında kaynak türü seçildiğinde ipucu göster
        document.getElementById('KaynakTipi').addEventListener('change', function(e) {
            const urlInput = document.getElementById('Url');
            const urlLabel = urlInput.previousElementSibling;
            
            switch(e.target.value) {
                case 'Website':
                case 'API':
                    urlLabel.innerHTML = '<i class="fas fa-link me-1"></i> URL *';
                    urlInput.required = true;
                    break;
                case 'Video':
                    urlLabel.innerHTML = '<i class="fas fa-link me-1"></i> Video URL (İsteğe Bağlı)';
                    urlInput.required = false;
                    break;
                default:
                    urlLabel.innerHTML = '<i class="fas fa-link me-1"></i> URL (İsteğe Bağlı)';
                    urlInput.required = false;
                    break;
            }
        });
    </script>
}
