@{
    ViewData["Title"] = "Akademisyen Paneli";
}

<div class="container py-4">
    <h1 class="mb-4">Akademisyen Paneli</h1>
    
    <!-- Özet İstatistikler -->
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card bg-primary text-white h-100">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="card-title mb-0">Danışmanlık</h6>
                        <i class="fas fa-chalkboard-teacher fa-2x"></i>
                    </div>
                    <h2 class="mt-3 mb-0">@ViewBag.DanismanlikSayisi</h2>
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <span>Danışmanlık Yaptığınız Projeler</span>
                    <a asp-controller="Akademisyen" asp-action="Danismanliklar" class="text-white">
                        <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card bg-success text-white h-100">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="card-title mb-0">Bekleyen Değerlendirmeler</h6>
                        <i class="fas fa-clipboard-check fa-2x"></i>
                    </div>
                    <h2 class="mt-3 mb-0">@ViewBag.BekleyenDegerlendirmeSayisi</h2>
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <span>Değerlendirilmesi Gereken Projeler</span>
                    <a asp-controller="Degerlendirme" asp-action="Bekleyen" class="text-white">
                        <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card bg-warning text-white h-100">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="card-title mb-0">Yaklaşan Teslimler</h6>
                        <i class="fas fa-calendar-alt fa-2x"></i>
                    </div>
                    <h2 class="mt-3 mb-0">@(ViewBag.YaklasanTeslimler != null ? ViewBag.YaklasanTeslimler.Count : 0)</h2>
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <span>Bu Hafta Teslimi Yaklaşan Projeler</span>
                    <a href="#" class="text-white">
                        <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Danışmanlık Yaptığınız Projeler -->
    <div class="card mt-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Danışmanlık Yaptığınız Projeler</h5>
            <a asp-controller="Akademisyen" asp-action="Danismanliklar" class="btn btn-sm btn-primary">Tümünü Gör</a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Proje Adı</th>
                            <th>Öğrenci</th>
                            <th>Kategori</th>
                            <th>Durum</th>
                            <th>Tarih</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.DanismanlikProjeleri != null && ViewBag.DanismanlikProjeleri.Count > 0)
                        {
                            @foreach (var proje in ViewBag.DanismanlikProjeleri)
                            {
                                <tr>
                                    <td>@proje.Ad</td>
                                    <td>@proje.Ogrenci.Ad @proje.Ogrenci.Soyad</td>
                                    <td><span class="badge bg-info">@proje.Kategori.Ad</span></td>
                                    <td>
                                        @{
                                            string badgeClass = "";
                                            switch (proje.Status)
                                            {
                                                case "Beklemede": badgeClass = "bg-warning"; break;
                                                case "Atanmis": badgeClass = "bg-info"; break;
                                                case "Devam": badgeClass = "bg-primary"; break;
                                                case "Tamamlandi": badgeClass = "bg-success"; break;
                                                case "Iptal": badgeClass = "bg-danger"; break;
                                                default: badgeClass = "bg-secondary"; break;
                                            }
                                        }
                                        <span class="badge @badgeClass">@proje.Status</span>
                                    </td>
                                    <td>@proje.OlusturmaTarihi.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        <a asp-controller="Proje" asp-action="Details" asp-route-id="@proje.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-controller="Degerlendirme" asp-action="Create" asp-route-projeId="@proje.Id" class="btn btn-sm btn-outline-success">
                                            <i class="fas fa-star"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-3">Henüz danışmanlık yaptığınız proje bulunmuyor.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <!-- Alt Bölüm -->
    <div class="row mt-4">
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0">Yaklaşan Teslim Tarihleri</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.YaklasanTeslimler != null && ViewBag.YaklasanTeslimler.Count > 0)
                    {
                        <div class="alert alert-info">
                            <div class="d-flex align-items-center">
                                <div class="me-3">
                                    <i class="fas fa-calendar-alt fa-2x"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1">Yaklaşan Teslim Tarihleri</h6>
                                    <p class="mb-0">Bu hafta @ViewBag.YaklasanTeslimler.Count projenin teslim tarihi yaklaşıyor.</p>
                                </div>
                            </div>
                        </div>
                        
                        <ul class="list-group list-group-flush">
                            @foreach (var proje in ViewBag.YaklasanTeslimler)
                            {
                                try 
                                {
                                    var kalanGun = (proje.TeslimTarihi - DateTime.Today).TotalDays;
                                    var badgeClass = kalanGun <= 3 ? "bg-danger" : (kalanGun <= 5 ? "bg-warning" : "bg-primary");
                                    
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-0">@proje.Ad</h6>
                                            <small class="text-muted">@proje.Ogrenci.Ad @proje.Ogrenci.Soyad</small>
                                        </div>
                                        <span class="badge @badgeClass rounded-pill">@((int)kalanGun) gün kaldı</span>
                                    </li>
                                }
                                catch { /* TeslimTarihi null ise bu projeyi atla */ }
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-calendar-check fa-3x text-muted mb-3"></i>
                            <p>Bu hafta teslimi yaklaşan proje bulunmuyor.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0">Son Yorumlarınız</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.SonYorumlar != null && ViewBag.SonYorumlar.Count > 0)
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var yorum in ViewBag.SonYorumlar)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@yorum.Proje.Ad</h6>
                                        <small>@((DateTime.Now - yorum.OlusturmaTarihi).TotalDays < 1 ? 
                                            $"{(int)(DateTime.Now - yorum.OlusturmaTarihi).TotalHours} saat önce" : 
                                            $"{(int)(DateTime.Now - yorum.OlusturmaTarihi).TotalDays} gün önce")</small>
                                    </div>
                                    <p class="mb-1">@yorum.Icerik</p>
                                    <small class="text-muted">Yorum tipi: @yorum.YorumTipi</small>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-comments fa-3x text-muted mb-3"></i>
                            <p>Henüz yorum yapmadınız.</p>
                            <a href="#" class="btn btn-outline-primary">Yorum Ekle</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 