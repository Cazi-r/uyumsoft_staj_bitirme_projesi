@{
    ViewData["Title"] = "Hoş Geldiniz";
}

<div class="container py-5">
    <!-- Hero -->
    <div class="welcome-hero mb-5 animate-header">
        <div class="row align-items-center g-4">
            <div class="col-lg-7">
                <h1 class="display-4 fw-bold text-primary">Universite Proje Yonetim Sistemi</h1>
                <p class="lead my-4">
                    Ogrenci projeleri, akademik danismanlik surecleri ve proje takibi icin kapsamli ve modern bir cozum.
                </p>
                <div class="d-flex gap-3 flex-wrap">
                    <a asp-controller="Auth" asp-action="Login" class="btn btn-primary btn-lg px-4">
                        <i class="fas fa-right-to-bracket me-2"></i> Giris Yap
                    </a>
                    <a asp-controller="Auth" asp-action="Register" class="btn btn-outline-secondary btn-lg px-4">
                        <i class="fas fa-user-plus me-2"></i> Kayit Ol
                    </a>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="text-center welcome-gallery">
                    <img src="~/img/hero-placeholder.png" alt="Proje Yonetimi" class="img-fluid">
                </div>
            </div>
        </div>
    </div>

    <!-- Features -->
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 animate-card">
                <div class="card-body text-center py-4">
                    <div class="mb-3"><i class="fas fa-users fa-3x text-primary"></i></div>
                    <h5 class="card-title">Ogrenciler icin</h5>
                    <p class="card-text">Projelerini yonet, danismaninla iletisime gec, kaynaklarini duzenle.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 animate-card">
                <div class="card-body text-center py-4">
                    <div class="mb-3"><i class="fas fa-chalkboard-teacher fa-3x text-primary"></i></div>
                    <h5 class="card-title">Akademisyenler icin</h5>
                    <p class="card-text">Danismanlik projelerini takip et, geribildirim ver, degerlendirme yap.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 animate-card">
                <div class="card-body text-center py-4">
                    <div class="mb-3"><i class="fas fa-diagram-project fa-3x text-primary"></i></div>
                    <h5 class="card-title">Proje takibi</h5>
                    <p class="card-text">Asamalari izle, dosyalari yönet, zamaninda teslim et.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Animasyonlar artık global sistem tarafından otomatik yönetiliyor
        });
    </script>
} 