@model IEnumerable<UniversiteProjeYonetimSistemi.Models.Degerlendirme>

@{
    ViewData["Title"] = "Proje Değerlendirmeleri";
    var projeId = Model.FirstOrDefault()?.ProjeId ?? 0;
}

<div class="container py-4 animate-header">
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm animate-card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Proje Değerlendirmeleri</h5>
                    <div class="d-flex gap-2">
                        <a asp-controller="ProjeDegerlendirme" asp-action="Add" asp-route-id="@projeId" class="btn btn-light btn-sm animate-button">
                            <i class="fas fa-plus me-2"></i>Değerlendirme Ekle
                        </a>
                        <a asp-controller="Proje" asp-action="Details" asp-route-id="@projeId" class="btn btn-outline-light btn-sm animate-button">
                            <i class="fas fa-arrow-left me-2"></i>Projeye Dön
                        </a>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-star fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Henüz değerlendirme yapılmamış</h5>
                            <p class="text-muted">Bu proje için henüz herhangi bir değerlendirme yapılmamış.</p>
                            <a asp-controller="ProjeDegerlendirme" asp-action="Add" asp-route-id="@projeId" class="btn btn-primary animate-button">
                                <i class="fas fa-plus me-2"></i>İlk Değerlendirmeyi Ekle
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Değerlendiren</th>
                                        <th>Tip</th>
                                        <th>Puan</th>
                                        <th>Açıklama</th>
                                        <th>Tarih</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var degerlendirme in Model.OrderByDescending(d => d.CreatedAt))
                                    {
                                        <tr class="animate-row">
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-user-tie me-2 text-primary"></i>
                                                    <strong>@degerlendirme.Akademisyen.Unvan @degerlendirme.Akademisyen.Ad @degerlendirme.Akademisyen.Soyad</strong>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@degerlendirme.DegerlendirmeTipi</span>
                                            </td>
                                            <td>
                                                @degerlendirme.Puan / 100
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(degerlendirme.Aciklama))
                                                {
                                                    <span>@(degerlendirme.Aciklama.Length > 50 ? degerlendirme.Aciklama.Substring(0, 50) + "..." : degerlendirme.Aciklama)</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Açıklama yok</span>
                                                }
                                            </td>
                                            <td>
                                                @degerlendirme.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                            </td>
                                            <td>
                                                <div class="d-flex flex-column gap-1">
                                                    <a asp-controller="ProjeDegerlendirme" asp-action="Details" asp-route-id="@degerlendirme.Id" 
                                                       class="btn btn-sm btn-outline-info">
                                                        <i class="fas fa-eye me-1"></i>Detay
                                                    </a>
                                                    <a asp-controller="ProjeDegerlendirme" asp-action="Edit" asp-route-id="@degerlendirme.Id" 
                                                       class="btn btn-sm btn-outline-warning">
                                                        <i class="fas fa-edit me-1"></i>Düzenle
                                                    </a>
                                                    <a asp-controller="ProjeDegerlendirme" asp-action="Delete" asp-route-id="@degerlendirme.Id" 
                                                       class="btn btn-sm btn-outline-danger">
                                                        <i class="fas fa-trash me-1"></i>Sil
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .animate-row {
        transition: all 0.3s ease;
    }
    
    .animate-row:hover {
        background-color: #f8f9fa;
        transform: translateX(5px);
    }
</style> 