@model UniversiteProjeYonetimSistemi.Models.ProjeKategori

@{
    ViewData["Title"] = "Kategori Detayları";
}

<div class="container mt-4">
    <div class="row mb-3 animate-header">
        <div class="col">
            <h1 class="page-title"><i class="fas fa-info-circle me-2 text-primary"></i>Kategori Detayları</h1>
        </div>
        <div class="col-auto">
            <div class="btn-group" role="group">
                @if (User.IsInRole("Admin") || User.IsInRole("Akademisyen"))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary animate-button">
                        <i class="fas fa-edit"></i> Düzenle
                    </a>
                }
                <a asp-action="Index" class="btn btn-secondary animate-button">
                    <i class="fas fa-arrow-left"></i> Listeye Dön
                </a>
            </div>
        </div>
    </div>

    <div class="card animate-card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <span>@Model.Ad</span>
                <span class="badge" style="background-color: @Model.Renk; padding: 8px;">@Model.Renk</span>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Kategori ID</dt>
                        <dd class="col-sm-8">@Model.Id</dd>
                        
                        <dt class="col-sm-4">Kategori Adı</dt>
                        <dd class="col-sm-8">@Model.Ad</dd>
                        
                        <dt class="col-sm-4">Oluşturulma Tarihi</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>
                        
                        <dt class="col-sm-4">Son Güncelleme</dt>
                        <dd class="col-sm-8">@Model.UpdatedAt.ToString("dd.MM.yyyy HH:mm")</dd>
                    </dl>
                </div>
                
                <div class="col-md-6">
                    <div class="card animate-card">
                        <div class="card-header">Açıklama</div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(Model.Aciklama))
                            {
                                <p>@Model.Aciklama</p>
                            }
                            else
                            {
                                <p class="text-muted">Bu kategori için açıklama girilmemiş.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
            
            @if (Model.Projeler != null && Model.Projeler.Any())
            {
                <div class="mt-4">
                    <h4>Bu Kategorideki Projeler (@Model.Projeler.Count)</h4>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover animate-table">
                            <thead>
                                <tr>
                                    <th>Proje Adı</th>
                                    <th>Oluşturulma Tarihi</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var proje in Model.Projeler)
                                {
                                    <tr class="table-hover-item">
                                        <td>@proje.Ad</td>
                                        <td>@proje.OlusturmaTarihi.ToString("dd.MM.yyyy")</td>
                                        <td>
                                            <span class="badge bg-@(proje.Status == "Tamamlandi" ? "success" : 
                                                                    proje.Status == "Devam" ? "primary" : 
                                                                    proje.Status == "Beklemede" ? "warning" : 
                                                                    proje.Status == "Iptal" ? "danger" : "secondary")">
                                                @proje.Status
                                            </span>
                                        </td>
                                        <td>
                                            <a asp-controller="Proje" asp-action="Details" asp-route-id="@proje.Id" class="btn btn-sm btn-outline-info animate-button">
                                                <i class="fas fa-info-circle"></i> Detaylar
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info mt-4">
                    <i class="fas fa-info-circle"></i> Bu kategoride henüz hiç proje bulunmuyor.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Animasyonlar artık global sistem tarafından otomatik yönetiliyor
        });
    </script>
} 