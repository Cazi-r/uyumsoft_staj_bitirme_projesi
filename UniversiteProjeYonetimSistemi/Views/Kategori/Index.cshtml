@model IEnumerable<UniversiteProjeYonetimSistemi.Models.ProjeKategori>

@{
    ViewData["Title"] = "Proje Kategorileri";
}

<div class="container mt-4">
    @if (!User.Identity.IsAuthenticated)
    {
        <div class="alert alert-warning d-flex align-items-center" role="alert">
            <i class="fas fa-lock me-2"></i>
            <div>Bu sayfayi gormek icin lutfen giris yapiniz.</div>
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-2 animate-header">
        <h1 class="h3 mb-0">Proje Kategorileri</h1>
        @if (User.IsInRole("Admin") || User.IsInRole("Akademisyen"))
        {
            <a asp-action="Create" class="btn btn-primary animate-button">
                <i class="fas fa-plus-circle"></i> Yeni Kategori
            </a>
        }
    </div>

    <div class="page-toolbar shadow-sm border rounded bg-white mb-3">
        <div class="d-flex flex-wrap align-items-center gap-2">
            <div class="flex-grow-1" style="min-width: 240px;">
                <div class="input-group">
                    <span class="input-group-text bg-light border-0"><i class="fas fa-search text-muted"></i></span>
                    <input type="text" id="kategoriSearch" class="form-control border-0 bg-light" placeholder="Kategorilerde ara...">
                </div>
            </div>
        </div>
    </div>

    <div class="card animate-card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover animate-table" id="kategoriTable">
                        <thead>
                            <tr>
                                <th>Kategori Adı</th>
                                <th>Açıklama</th>
                                <th>Renk</th>
                                <th style="width: 180px;">Oluşturulma</th>
                                <th style="width: 140px;" class="text-end">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="table-hover-item" data-name="@item.Ad.ToLower()" data-desc="@item.Aciklama?.ToLower()">
                                    <td class="fw-medium">@item.Ad</td>
                                    <td>@(item.Aciklama?.Length > 50 ? item.Aciklama.Substring(0, 50) + "..." : item.Aciklama)</td>
                                    <td>
                                        <span class="badge" style="background-color: @item.Renk; padding: 8px;">@item.Renk</span>
                                    </td>
                                    <td>
                                        <span class="small" title="@item.CreatedAt.ToString("dd.MM.yyyy HH:mm")">@item.CreatedAt.ToString("dd.MM.yy")</span>
                                    </td>
                                    <td class="text-end actions-cell">
                                        <div class="d-inline-flex align-items-center gap-1">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                                <i class="fas fa-eye me-1"></i> Goruntule
                                            </a>
                                            <div class="dropdown d-inline-block">
                                                <button type="button" class="btn btn-sm btn-transparent" data-bs-toggle="dropdown" aria-expanded="false" aria-label="Diger islemler">
                                                    <i class="fas fa-ellipsis-h"></i>
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-end">
                                                    @if (User.IsInRole("Admin") || User.IsInRole("Akademisyen"))
                                                    {
                                                        <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-pen me-2"></i> Duzenle</a></li>
                                                        <li><hr class="dropdown-divider"/></li>
                                                        <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash me-2"></i> Sil</a></li>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Henüz hiç kategori eklenmemiş.
                    @if (User.IsInRole("Admin") || User.IsInRole("Akademisyen"))
                    {
                        <span>Yeni bir kategori eklemek için "Yeni Kategori" butonuna tıklayın.</span>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // anlik arama
            $('#kategoriSearch').on('keyup', function(){
                const term = $(this).val().toLowerCase();
                let shown = 0;
                $('#kategoriTable tbody tr').each(function(){
                    const name = $(this).data('name') || '';
                    const desc = $(this).data('desc') || '';
                    const ok = name.includes(term) || desc.includes(term);
                    $(this).toggle(ok);
                    if (ok) shown++;
                });
            });
            // 3 saniye sonra başarı mesajını otomatik kapat
            setTimeout(function () {
                $('.alert-success').alert('close');
            }, 3000);
        });
    </script>
} 