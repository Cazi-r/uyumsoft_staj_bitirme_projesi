@model IEnumerable<UniversiteProjeYonetimSistemi.Models.ProjeKategori>

@{
    ViewData["Title"] = "Proje Kategorileri";
}

<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-3 animate-header">
        <div class="col">
            <h1>Proje Kategorileri</h1>
        </div>
        @if (User.IsInRole("Admin") || User.IsInRole("Akademisyen"))
        {
            <div class="col-auto">
                <a asp-action="Create" class="btn btn-primary animate-button">
                    <i class="fas fa-plus-circle"></i> Yeni Kategori
                </a>
            </div>
        }
    </div>

    <div class="card animate-card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover animate-table">
                        <thead>
                            <tr>
                                <th>Kategori Adı</th>
                                <th>Açıklama</th>
                                <th>Renk</th>
                                <th>Oluşturulma Tarihi</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="table-hover-item">
                                    <td>@item.Ad</td>
                                    <td>@(item.Aciklama?.Length > 50 ? item.Aciklama.Substring(0, 50) + "..." : item.Aciklama)</td>
                                    <td>
                                        <span class="badge" style="background-color: @item.Renk; padding: 8px;">@item.Renk</span>
                                    </td>
                                    <td>@item.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            @if (User.IsInRole("Admin") || User.IsInRole("Akademisyen"))
                                            {
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary animate-button">
                                                    <i class="fas fa-edit"></i> Düzenle
                                                </a>
                                            }
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info animate-button">
                                                <i class="fas fa-info-circle"></i> Detaylar
                                            </a>
                                            @if (User.IsInRole("Admin") || User.IsInRole("Akademisyen"))
                                            {
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger animate-button">
                                                    <i class="fas fa-trash"></i> Sil
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Henüz hiç kategori eklenmemiş.
                    @if (User.IsInRole("Admin") || User.IsInRole("Akademisyen"))
                    {
                        <span>Yeni bir kategori eklemek için "Yeni Kategori" butonuna tıklayın.</span>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Staggered Page Load Animations - Akademisyen Dashboard tarzı animasyonlar
            setTimeout(function() {
                $('.animate-header').addClass('animate-in');
            }, 100);
            
            setTimeout(function() {
                $('.animate-card').addClass('animate-in');
            }, 200);
            
            setTimeout(function() {
                $('.animate-table').addClass('animate-in');
            }, 300);
            
            setTimeout(function() {
                $('.table-hover-item').addClass('animate-in');
            }, 400);
            
            setTimeout(function() {
                $('.animate-button').addClass('animate-in');
            }, 500);
            
            // 3 saniye sonra başarı mesajını otomatik kapat
            setTimeout(function () {
                $('.alert-success').alert('close');
            }, 3000);
        });
    </script>
} 