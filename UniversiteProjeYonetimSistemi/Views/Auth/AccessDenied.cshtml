@{
    ViewData["Title"] = "Erişim Engellendi";
}

<div class="text-center mt-5 animate-header">
    <div class="alert alert-danger p-5 animate-card">
        <h1 class="display-4 text-danger">
            <i class="fas fa-exclamation-triangle me-3"></i>Erişim Engellendi
        </h1>
        <p class="lead mt-4">
            Bu sayfaya erişim yetkiniz bulunmamaktadır.
        </p>
        <hr class="my-4">
        <p>Bu sayfaya erişmek için gerekli yetkilere sahip olduğunuzu düşünüyorsanız, lütfen sistem yöneticisiyle iletişime geçin.</p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg mt-3 animate-button">
            <i class="fas fa-home me-2"></i>Ana Sayfaya Dön
        </a>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Staggered Page Load Animations - Akademisyen Dashboard tarzı animasyonlar
            setTimeout(function() {
                $('.animate-header').addClass('animate-in');
            }, 100);
            
            setTimeout(function() {
                $('.animate-card').addClass('animate-in');
            }, 200);
            
            setTimeout(function() {
                $('.animate-button').addClass('animate-in');
            }, 300);
        });
    </script>
} 