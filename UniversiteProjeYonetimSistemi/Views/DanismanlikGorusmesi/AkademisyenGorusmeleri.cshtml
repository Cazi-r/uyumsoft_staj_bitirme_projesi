@model IEnumerable<UniversiteProjeYonetimSistemi.Models.DanismanlikGorusmesi>

@{
    ViewData["Title"] = "Görüşme Talepleri";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-md-8">
            <h2>@ViewData["Title"]</h2>
            <p>Öğrencilerin görüşme taleplerini bu sayfadan yönetebilirsiniz.</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Yeni Görüşme Planla
            </a>
        </div>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-12">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="bekleyen-tab" data-bs-toggle="tab" data-bs-target="#bekleyen" type="button" role="tab" aria-controls="bekleyen" aria-selected="true">
                        Bekleyen Talepler
                        <span class="badge bg-warning ms-2">@ViewBag.BekleyenTalepler.Count</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="yakin-tab" data-bs-toggle="tab" data-bs-target="#yakin" type="button" role="tab" aria-controls="yakin" aria-selected="false">
                        Yaklaşan Görüşmeler
                        <span class="badge bg-primary ms-2">@ViewBag.YakinGorusmeler.Count</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="ilerideki-tab" data-bs-toggle="tab" data-bs-target="#ilerideki" type="button" role="tab" aria-controls="ilerideki" aria-selected="false">
                        İlerideki Görüşmeler
                        <span class="badge bg-info ms-2">@ViewBag.IleridekiGorusmeler.Count</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="gecmis-tab" data-bs-toggle="tab" data-bs-target="#gecmis" type="button" role="tab" aria-controls="gecmis" aria-selected="false">
                        Geçmiş Görüşmeler
                        <span class="badge bg-secondary ms-2">@ViewBag.GecmisGorusmeler.Count</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="iptal-tab" data-bs-toggle="tab" data-bs-target="#iptal" type="button" role="tab" aria-controls="iptal" aria-selected="false">
                        İptal Edilenler
                        <span class="badge bg-danger ms-2">@ViewBag.IptalGorusmeler.Count</span>
                    </button>
                </li>
            </ul>
        </div>
    </div>

    <div class="tab-content" id="myTabContent">
        <!-- Bekleyen Talepler -->
        <div class="tab-pane fade show active" id="bekleyen" role="tabpanel" aria-labelledby="bekleyen-tab">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>Proje</th>
                                    <th>Öğrenci</th>
                                    <th>Başlık</th>
                                    <th>Görüşme Tarihi</th>
                                    <th>Görüşme Tipi</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.BekleyenTalepler.Count > 0)
                                {
                                    @foreach (var item in ViewBag.BekleyenTalepler)
                                    {
                                        <tr>
                                            <td>@item.Proje?.Ad</td>
                                            <td>@item.Ogrenci?.Ad @item.Ogrenci?.Soyad</td>
                                            <td>@item.Baslik</td>
                                            <td>@item.GorusmeTarihi.ToString("g")</td>
                                            <td>@item.GorusmeTipi</td>
                                            <td>
                                                <div class="btn-group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-eye"></i> Detay
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                                                        <i class="bi bi-pencil"></i> Düzenle
                                                    </a>
                                                    <form asp-action="OnayveyaReddet" method="post" style="display: inline;">
                                                        <input type="hidden" name="id" value="@item.Id" />
                                                        <input type="hidden" name="durum" value="Onaylandı" />
                                                        <button type="submit" class="btn btn-sm btn-outline-success">
                                                            <i class="bi bi-check-circle"></i> Onayla
                                                        </button>
                                                    </form>
                                                    <form asp-action="OnayveyaReddet" method="post" style="display: inline;">
                                                        <input type="hidden" name="id" value="@item.Id" />
                                                        <input type="hidden" name="durum" value="Reddedildi" />
                                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                                            <i class="bi bi-x-circle"></i> Reddet
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center">Bekleyen görüşme talebi bulunmamaktadır.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Yaklaşan Görüşmeler -->
        <div class="tab-pane fade" id="yakin" role="tabpanel" aria-labelledby="yakin-tab">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>Proje</th>
                                    <th>Öğrenci</th>
                                    <th>Başlık</th>
                                    <th>Görüşme Tarihi</th>
                                    <th>Görüşme Tipi</th>
                                    <th>Kalan Süre</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.YakinGorusmeler.Count > 0)
                                {
                                    @foreach (var item in ViewBag.YakinGorusmeler)
                                    {
                                        var kalanGun = (int)((item.GorusmeTarihi - DateTime.Now).TotalDays) + 1;
                                        <tr>
                                            <td>@item.Proje?.Ad</td>
                                            <td>@item.Ogrenci?.Ad @item.Ogrenci?.Soyad</td>
                                            <td>@item.Baslik</td>
                                            <td>@item.GorusmeTarihi.ToString("g")</td>
                                            <td>@item.GorusmeTipi</td>
                                            <td>
                                                @if (item.ZamanDurumu == "Bugun")
                                                {
                                                    <span class="badge bg-danger">Bugün</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-primary">@kalanGun gün kaldı</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-eye"></i> Detay
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center">Yaklaşan görüşmeniz bulunmamaktadır.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- İlerideki Görüşmeler -->
        <div class="tab-pane fade" id="ilerideki" role="tabpanel" aria-labelledby="ilerideki-tab">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>Proje</th>
                                    <th>Öğrenci</th>
                                    <th>Başlık</th>
                                    <th>Görüşme Tarihi</th>
                                    <th>Görüşme Tipi</th>
                                    <th>Kalan Süre</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.IleridekiGorusmeler.Count > 0)
                                {
                                    @foreach (var item in ViewBag.IleridekiGorusmeler)
                                    {
                                        var kalanGun = (int)(item.GorusmeTarihi - DateTime.Now).TotalDays;
                                        <tr>
                                            <td>@item.Proje?.Ad</td>
                                            <td>@item.Ogrenci?.Ad @item.Ogrenci?.Soyad</td>
                                            <td>@item.Baslik</td>
                                            <td>@item.GorusmeTarihi.ToString("g")</td>
                                            <td>@item.GorusmeTipi</td>
                                            <td><span class="badge bg-info">@kalanGun gün sonra</span></td>
                                            <td>
                                                <div class="btn-group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-eye"></i> Detay
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center">İlerideki planlanmış görüşmeniz bulunmamaktadır.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Geçmiş Görüşmeler -->
        <div class="tab-pane fade" id="gecmis" role="tabpanel" aria-labelledby="gecmis-tab">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>Proje</th>
                                    <th>Öğrenci</th>
                                    <th>Başlık</th>
                                    <th>Görüşme Tarihi</th>
                                    <th>Görüşme Tipi</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.GecmisGorusmeler.Count > 0)
                                {
                                    @foreach (var item in ViewBag.GecmisGorusmeler)
                                    {
                                        <tr>
                                            <td>@item.Proje?.Ad</td>
                                            <td>@item.Ogrenci?.Ad @item.Ogrenci?.Soyad</td>
                                            <td>@item.Baslik</td>
                                            <td>@item.GorusmeTarihi.ToString("g")</td>
                                            <td>@item.GorusmeTipi</td>
                                            <td>
                                                <div class="btn-group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-eye"></i> Detay
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center">Geçmiş görüşmeniz bulunmamaktadır.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- İptal Edilenler -->
        <div class="tab-pane fade" id="iptal" role="tabpanel" aria-labelledby="iptal-tab">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>Proje</th>
                                    <th>Öğrenci</th>
                                    <th>Başlık</th>
                                    <th>Planlanmış Tarih</th>
                                    <th>Görüşme Tipi</th>
                                    <th>İptal Tarihi</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.IptalGorusmeler.Count > 0)
                                {
                                    @foreach (var item in ViewBag.IptalGorusmeler)
                                    {
                                        <tr>
                                            <td>@item.Proje?.Ad</td>
                                            <td>@item.Ogrenci?.Ad @item.Ogrenci?.Soyad</td>
                                            <td>@item.Baslik</td>
                                            <td>@item.GorusmeTarihi.ToString("g")</td>
                                            <td>@item.GorusmeTipi</td>
                                            <td>@(item.UpdatedAt != default(DateTime) ? item.UpdatedAt.ToString("g") : "-")</td>
                                            <td>
                                                <div class="btn-group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-eye"></i> Detay
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center">İptal edilen görüşmeniz bulunmamaktadır.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Bootstrap tab activation
            $('a[data-toggle="tab"]').on('click', function (e) {
                e.preventDefault();
                $(this).tab('show');
            });
        });
    </script>
} 