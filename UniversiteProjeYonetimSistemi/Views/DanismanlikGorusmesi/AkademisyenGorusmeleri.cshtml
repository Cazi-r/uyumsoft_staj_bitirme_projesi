@model IEnumerable<UniversiteProjeYonetimSistemi.Models.DanismanlikGorusmesi>
@using UniversiteProjeYonetimSistemi.Models

@{
    ViewData["Title"] = "Görüşme Talepleri";
}

<div class="container py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4 page-header animate-header">
        <div>
            <h1 class="page-title"><i class="fas fa-chalkboard-teacher me-2 text-primary"></i> Danışmanlık Görüşmeleri</h1>
            <p class="text-muted mb-0">Öğrencilerin görüşme taleplerini yönetin ve yaklaşan görüşmelerinizi takip edin.</p>
        </div>
        <div>
            <span class="badge bg-light text-dark border date-badge ms-2">
                <i class="far fa-calendar me-1"></i> @DateTime.Now.ToString("dd MMMM yyyy")
            </span>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show animate-card" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show animate-card" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    
    <!-- Basit Tab Navigation - Sadece 3 Ana Kategori -->
    <div class="row mb-4">
        <div class="col-12">
            <ul class="nav nav-tabs animate-nav-tabs" id="gorusmelerTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="bekleyen-tab" data-bs-toggle="tab" data-bs-target="#bekleyen" type="button" role="tab" aria-controls="bekleyen" aria-selected="true">
                        <i class="fas fa-hourglass-half me-2"></i>Bekleyen Talepler
                        <span class="badge bg-warning ms-2">@Model.Count(g => g.Durum == GorusmeDurumu.HocaOnayiBekliyor || g.Durum == GorusmeDurumu.OgrenciOnayiBekliyor)</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="onaylanmis-tab" data-bs-toggle="tab" data-bs-target="#onaylanmis" type="button" role="tab" aria-controls="onaylanmis" aria-selected="false">
                        <i class="fas fa-check-circle me-2"></i>Onaylanmış Görüşmeler
                        <span class="badge bg-success ms-2">@Model.Count(g => g.Durum == GorusmeDurumu.Onaylandi)</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="tamamlanan-tab" data-bs-toggle="tab" data-bs-target="#tamamlanan" type="button" role="tab" aria-controls="tamamlanan" aria-selected="false">
                        <i class="fas fa-history me-2"></i>Tamamlanan/İptal Edilenler
                        <span class="badge bg-secondary ms-2">@Model.Count(g => g.Durum == GorusmeDurumu.Gerceklestirildi || g.Durum == GorusmeDurumu.IptalEdildi)</span>
                    </button>
                </li>
            </ul>
        </div>
    </div>

    <div class="tab-content" id="gorusmelerTabContent">
        <!-- Bekleyen Talepler -->
        <div class="tab-pane fade show active" id="bekleyen" role="tabpanel" aria-labelledby="bekleyen-tab">
            <div class="card shadow-sm mb-4 main-table">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">
                        <i class="fas fa-hourglass-half me-2 text-warning"></i> Bekleyen Talepler
                    </h5>
                    <a asp-action="Create" class="btn btn-warning">
                        <i class="fas fa-plus me-1"></i> Yeni Görüşme Planla
                    </a>
                </div>
                <div class="card-body p-0">
                    @{
                        var bekleyenTalepler = Model.Where(g => g.Durum == GorusmeDurumu.HocaOnayiBekliyor || g.Durum == GorusmeDurumu.OgrenciOnayiBekliyor);
                    }
                    @if (bekleyenTalepler.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="ps-3">Proje</th>
                                        <th>Öğrenci</th>
                                        <th>Başlık</th>
                                        <th>Görüşme Tarihi</th>
                                        <th>Görüşme Tipi</th>
                                        <th>Durum</th>
                                        <th class="text-end pe-3">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in bekleyenTalepler)
                                    {
                                        <tr class="project-row">
                                            <td class="fw-medium ps-3">@item.Proje?.Ad</td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm bg-info text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px; font-size: 12px;">
                                                        @(item.Ogrenci?.Ad?.Substring(0,1) ?? "")@(item.Ogrenci?.Soyad?.Substring(0,1) ?? "")
                                                    </div>
                                                    <div>
                                                        <div class="fw-medium">@item.Ogrenci?.Ad @item.Ogrenci?.Soyad</div>
                                                        <small class="text-muted">@item.Ogrenci?.OgrenciNo</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@item.Baslik</td>
                                            <td>@item.GorusmeTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td><span class="badge bg-primary">@item.GorusmeTipi</span></td>
                                            <td>
                                                @if (item.Durum == GorusmeDurumu.HocaOnayiBekliyor)
                                                {
                                                    <span class="badge bg-warning">Sizin Onayınızı Bekliyor</span>
                                                }
                                                else if (item.Durum == GorusmeDurumu.OgrenciOnayiBekliyor)
                                                {
                                                    <span class="badge bg-info">Öğrenci Onayı Bekliyor</span>
                                                }
                                            </td>
                                            <td class="text-end pe-3">
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye me-1"></i> Detaylar
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Bekleyen görüşme talebi bulunmamaktadır</h5>
                            <p class="text-muted">Öğrenciler görüşme talebinde bulunduğunda burada görünecektir.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Onaylanmış Görüşmeler -->
        <div class="tab-pane fade" id="onaylanmis" role="tabpanel" aria-labelledby="onaylanmis-tab">
            <div class="card shadow-sm mb-4 main-table">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="fas fa-check-circle me-2 text-success"></i> Onaylanmış Görüşmeler
                    </h5>
                </div>
                <div class="card-body p-0">
                    @{
                        var onaylanmisGorusmeler = Model.Where(g => g.Durum == GorusmeDurumu.Onaylandi).OrderBy(g => g.GorusmeTarihi);
                    }
                    @if (onaylanmisGorusmeler.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="ps-3">Proje</th>
                                        <th>Öğrenci</th>
                                        <th>Başlık</th>
                                        <th>Görüşme Tarihi</th>
                                        <th>Görüşme Tipi</th>
                                        <th>Durum</th>
                                        <th class="text-end pe-3">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in onaylanmisGorusmeler)
                                    {
                                        <tr class="project-row">
                                            <td class="fw-medium ps-3">@item.Proje?.Ad</td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm bg-info text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px; font-size: 12px;">
                                                        @(item.Ogrenci?.Ad?.Substring(0,1) ?? "")@(item.Ogrenci?.Soyad?.Substring(0,1) ?? "")
                                                    </div>
                                                    <div>
                                                        <div class="fw-medium">@item.Ogrenci?.Ad @item.Ogrenci?.Soyad</div>
                                                        <small class="text-muted">@item.Ogrenci?.OgrenciNo</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@item.Baslik</td>
                                            <td>@item.GorusmeTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td><span class="badge bg-primary">@item.GorusmeTipi</span></td>
                                            <td>
                                                @{
                                                    var today = DateTime.Today;
                                                    var meetingDate = item.GorusmeTarihi.Date;
                                                    var daysDiff = (int)(meetingDate - today).TotalDays;
                                                }
                                                @if (daysDiff < 0)
                                                {
                                                    <span class="badge bg-secondary">Geçmiş</span>
                                                }
                                                else if (daysDiff == 0)
                                                {
                                                    <span class="badge bg-danger">Bugün</span>
                                                }
                                                else if (daysDiff == 1)
                                                {
                                                    <span class="badge bg-warning">Yarın</span>
                                                }
                                                else if (daysDiff <= 7)
                                                {
                                                    <span class="badge bg-primary">@daysDiff gün sonra</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-info">İleri tarihli</span>
                                                }
                                            </td>
                                            <td class="text-end pe-3">
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye me-1"></i> Detaylar
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-check-circle fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Onaylanmış görüşmeniz bulunmamaktadır</h5>
                            <p class="text-muted">Henüz onaylanmış görüşmeniz bulunmuyor.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Tamamlanan/İptal Edilenler -->
        <div class="tab-pane fade" id="tamamlanan" role="tabpanel" aria-labelledby="tamamlanan-tab">
            <div class="card shadow-sm mb-4 main-table">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="fas fa-history me-2 text-secondary"></i> Tamamlanan ve İptal Edilen Görüşmeler
                    </h5>
                </div>
                <div class="card-body p-0">
                    @{
                        var tamamlananGorusmeler = Model.Where(g => g.Durum == GorusmeDurumu.Gerceklestirildi || g.Durum == GorusmeDurumu.IptalEdildi)
                                                        .OrderByDescending(g => g.UpdatedAt);
                    }
                    @if (tamamlananGorusmeler.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="ps-3">Proje</th>
                                        <th>Öğrenci</th>
                                        <th>Başlık</th>
                                        <th>Görüşme Tarihi</th>
                                        <th>Görüşme Tipi</th>
                                        <th>Son Durum</th>
                                        <th class="text-end pe-3">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in tamamlananGorusmeler)
                                    {
                                        <tr class="project-row">
                                            <td class="fw-medium ps-3">@item.Proje?.Ad</td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm bg-info text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px; font-size: 12px;">
                                                        @(item.Ogrenci?.Ad?.Substring(0,1) ?? "")@(item.Ogrenci?.Soyad?.Substring(0,1) ?? "")
                                                    </div>
                                                    <div>
                                                        <div class="fw-medium">@item.Ogrenci?.Ad @item.Ogrenci?.Soyad</div>
                                                        <small class="text-muted">@item.Ogrenci?.OgrenciNo</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@item.Baslik</td>
                                            <td>@item.GorusmeTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td><span class="badge bg-primary">@item.GorusmeTipi</span></td>
                                            <td>
                                                @if (item.Durum == GorusmeDurumu.Gerceklestirildi)
                                                {
                                                    <span class="badge bg-success">Tamamlandı</span>
                                                }
                                                else if (item.Durum == GorusmeDurumu.IptalEdildi)
                                                {
                                                    <span class="badge bg-danger">İptal Edildi</span>
                                                }
                                            </td>
                                            <td class="text-end pe-3">
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye me-1"></i> Detaylar
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-history fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Tamamlanan veya iptal edilen görüşmeniz bulunmamaktadır</h5>
                            <p class="text-muted">Henüz tamamlanan veya iptal edilen görüşmeniz bulunmuyor.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // İstatistik sayılarını animasyonlu göster
            $('.stat-number').each(function() {
                var $this = $(this);
                var countTo = $this.attr('data-count');
                
                $({ countNum: $this.text() }).animate({
                    countNum: countTo
                }, {
                    duration: 1000,
                    easing: 'swing',
                    step: function() {
                        $this.text(Math.floor(this.countNum));
                    },
                    complete: function() {
                        $this.text(this.countNum);
                    }
                });
            });

            // Alert'leri 5 saniye sonra otomatik kapat
            setTimeout(function () {
                $('.alert').alert('close');
            }, 5000);
        });
    </script>
}