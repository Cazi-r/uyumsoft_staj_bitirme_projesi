                            <i class="fas fa-plus me-1"></i> Yeni Görüşme Planla
                        </a>
                    </div>
                    @if (ViewBag.YakinGorusmeler.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover animate-table mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Proje</th>
                                        <th>Öğrenci</th>
                                        <th>Başlık</th>
                                        <th>Görüşme Tarihi</th>
                                        <th>Görüşme Tipi</th>
                                        <th>Kalan Süre</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.YakinGorusmeler)
                                    {
                                        var kalanGun = (int)((item.GorusmeTarihi - DateTime.Now).TotalDays) + 1;
                                        <tr class="table-hover-item">
                                            <td>@item.Proje?.Ad</td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm bg-info text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px; font-size: 12px;">
                                                        @(item.Ogrenci?.Ad?.Substring(0,1) ?? "")@(item.Ogrenci?.Soyad?.Substring(0,1) ?? "")
                                                    </div>
                                                    <div>
                                                        <div class="fw-medium">@item.Ogrenci?.Ad @item.Ogrenci?.Soyad</div>
                                                        <small class="text-muted">@item.Ogrenci?.OgrenciNo</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@item.Baslik</td>
                                            <td>@item.GorusmeTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td><span class="badge bg-primary">@item.GorusmeTipi</span></td>
                                            <td>
