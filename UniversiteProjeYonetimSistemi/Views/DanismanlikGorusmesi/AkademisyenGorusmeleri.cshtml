                                                }
                                                else
                                                {
                                                    <span class="badge bg-primary">@kalanGun gün kaldı</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Detay">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Yaklaşan görüşmeniz bulunmamaktadır</h5>
                            <p class="text-muted">7 gün içinde planlanmış görüşmeniz bulunmuyor.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

