                                @{
                                    var yakinGorusmeler = Model.Where(g => g.Durum == GorusmeDurumu.Onaylandi && g.GorusmeTarihi >= DateTime.Now && g.GorusmeTarihi <= DateTime.Now.AddDays(7));
                                }
                                @if (yakinGorusmeler.Any())
                                {
                                    @foreach (var item in yakinGorusmeler)
                                    {
                                        var kalanGun = (int)((item.GorusmeTarihi - DateTime.Now).TotalDays);
                                        <tr class="project-row">
                                            <td class="fw-medium ps-3">@item.Proje?.Ad</td>
                                            <td>
                                                <div class="d-flex align-items-center">
