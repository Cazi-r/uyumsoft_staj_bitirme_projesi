    <!-- Karanlık Tema JavaScript -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const darkModeSwitch = document.getElementById('darkModeSwitch');
            const darkThemeToggle = document.getElementById('darkThemeToggle');
            const rootElement = document.documentElement;
            const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
            
            // LocalStorage'dan tema durumunu kontrol et (yeni anahtar: themeMode)
            let themeMode = localStorage.getItem('themeMode');
            if (!themeMode) {
                themeMode = (localStorage.getItem('darkMode') === 'true') ? 'dark' : 'light';
            }
            const isDark = themeMode === 'dark' || (themeMode === 'auto' && prefersDark);
            
            if (darkModeSwitch) {
                darkModeSwitch.checked = !!isDark;
                darkModeSwitch.addEventListener('change', function() {
                    const nextMode = this.checked ? 'dark' : 'light';
                    try { localStorage.setItem('themeMode', nextMode); } catch (_) {}
                    applyTheme(nextMode);
                });
            }
            
            if (darkThemeToggle && darkModeSwitch) {
                darkThemeToggle.addEventListener('click', function(e) {
                    if (e.target !== darkModeSwitch) {
                        darkModeSwitch.checked = !darkModeSwitch.checked;
                        darkModeSwitch.dispatchEvent(new Event('change'));
                    }
                });
            }
            
            function applyTheme(mode) {
                if (mode === 'dark' || (mode === 'auto' && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                    rootElement.classList.add('dark-mode');
                    rootElement.classList.add('dark-theme');
                } else {
                    rootElement.classList.remove('dark-mode');
                    rootElement.classList.remove('dark-theme');
                }
            }
        });
    </script>
    
