<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Üniversite Proje Yönetim Sistemi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UniversiteProjeYonetimSistemi.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container">
                <span class="navbar-brand disabled" style="pointer-events: none; cursor: default;">
                    <i class="fas fa-graduation-cap me-2"></i>
                    Proje Yönetim Sistemi
                </span>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i> Ana Sayfa
                            </a>
                        </li>
                        @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link position-relative" asp-controller="Bildirim" asp-action="Index">
                                    <i class="fas fa-bell me-1"></i> Bildirimler
                                    @await Component.InvokeAsync("BildirimSayaci")
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Proje" asp-action="Index">
                                <i class="fas fa-tasks me-1"></i> Projeler
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Kategori" asp-action="Index">
                                <i class="fas fa-tags me-1"></i> Kategoriler
                            </a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-cogs me-1"></i> Yönetim
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">
                                            <i class="fas fa-chart-line me-2"></i> Dashboard
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Kullanicilar">
                                            <i class="fas fa-users me-2"></i> Kullanıcılar
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="KullaniciEtkinlikleri">
                                            <i class="fas fa-history me-2"></i> Etkinlik Geçmişi
                                        </a>
                                    </li>
                               </ul>
                            </li>
                        }
                        @if (User.IsInRole("Akademisyen"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Akademisyen" asp-action="Danismanliklar">
                                    <i class="fas fa-chalkboard-teacher me-1"></i> Danışmanlıklarım
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="DanismanlikGorusmesi" asp-action="Index">
                                    <i class="fas fa-calendar-check me-1"></i> Görüşme Talepleri
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Ogrenci"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Proje" asp-action="Index">
                                    <i class="fas fa-book me-1"></i> Projelerim
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="DanismanlikGorusmesi" asp-action="Index">
                                    <i class="fas fa-comments me-1"></i> Görüşmelerim
                                </a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark text-light">
        <div class="container">
            <div class="row py-3">
                <div class="col-md-6">
                    &copy; @DateTime.Now.Year - Üniversite Proje Yönetim Sistemi
                </div>
                <div class="col-md-6 text-md-end">
                    <a class="text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Gizlilik</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

