@{
    ViewData["Title"] = "Görünüm Ayarları";
}

<br />

<div class="container-fluid">
    <!-- Başlık -->
    <div class="row mb-4 animate-header">
        <div class="col">
            <div class="card bg-light border-0 animate-card">
                <div class="card-body py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-paint-brush me-2 text-blue"></i>Kişisel Görünüm Ayarlarınızı Özelleştirin
                    </h5>
                    <p class="text-muted mb-0 small">Görünüm tercihinizi seçin ve sistemi size göre özelleştirin</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <!-- Tema Seçenekleri -->
        <div class="col-lg-6 mb-3">
            <div class="card h-100 animate-card">
                <div class="card-header border-bottom animate-header">
                    <div class="d-flex align-items-center justify-content-between">
                        <h5 class="mb-0"><i class="fas fa-palette me-2 text-blue"></i>Tema Seçenekleri</h5>
                    </div>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <label class="form-label fw-bold">Tema Modu</label>
                        <div class="d-flex gap-3 mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="themeMode" id="lightMode" value="light" checked>
                                <label class="form-check-label" for="lightMode">
                                    <i class="fas fa-sun me-1 text-warning"></i> Açık Tema
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="themeMode" id="darkMode" value="dark">
                                <label class="form-check-label" for="darkMode">
                                    <i class="fas fa-moon me-1 text-blue"></i> Koyu Tema
                                </label>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Renk Paleti</label>
                            <div class="d-flex flex-wrap gap-2">
                                <div class="form-check">
                                    <input class="form-check-input visually-hidden" type="radio" name="colorPalette" id="defaultColor" value="default" checked>
                                    <label class="form-check-label color-option" for="defaultColor" title="Varsayılan Mavi" style="background-color: #0d6efd;"></label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input visually-hidden" type="radio" name="colorPalette" id="purpleColor" value="purple">
                                    <label class="form-check-label color-option" for="purpleColor" title="Mor" style="background-color: #6f42c1;"></label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input visually-hidden" type="radio" name="colorPalette" id="tealColor" value="teal">
                                    <label class="form-check-label color-option" for="tealColor" title="Turkuaz" style="background-color: #20c997;"></label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input visually-hidden" type="radio" name="colorPalette" id="redColor" value="red">
                                    <label class="form-check-label color-option" for="redColor" title="Kırmızı" style="background-color: #dc3545;"></label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input visually-hidden" type="radio" name="colorPalette" id="greenColor" value="green">
                                    <label class="form-check-label color-option" for="greenColor" title="Yeşil" style="background-color: #198754;"></label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input visually-hidden" type="radio" name="colorPalette" id="pinkColor" value="pink">
                                    <label class="form-check-label color-option" for="pinkColor" title="Pembe" style="background-color: #d63384;"></label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input visually-hidden" type="radio" name="colorPalette" id="orangeColor" value="orange">
                                    <label class="form-check-label color-option" for="orangeColor" title="Turuncu" style="background-color: #fd7e14;"></label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input visually-hidden" type="radio" name="colorPalette" id="indigoColor" value="indigo">
                                    <label class="form-check-label color-option" for="indigoColor" title="İndigo" style="background-color: #6610f2;"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Font ve Metin Boyutu -->
        <div class="col-lg-6 mb-3">
            <div class="card h-100 animate-card">
                <div class="card-header border-bottom animate-header">
                    <div class="d-flex align-items-center justify-content-between">
                        <h5 class="mb-0"><i class="fas fa-font me-2 text-blue"></i>Metin Ayarları</h5>
                    </div>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <label class="form-label fw-bold">Yazı Tipi Boyutu</label>
                        <div class="d-flex align-items-center">
                            <span class="me-2 small">A</span>
                            <input type="range" class="form-range" min="80" max="120" step="10" id="fontSizeRange" value="100">
                            <span class="ms-2 fw-bold">A</span>
                        </div>
                        <div class="text-center mt-2">
                            <span class="badge bg-light-fixed text-dark" id="fontSizeLabel">100%</span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Yazı Tipi</label>
                        <select class="form-select" id="fontFamily">
                            <option value="system-ui">Varsayılan (System UI)</option>
                            <option value="'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">Segoe UI</option>
                            <option value="'Roboto', sans-serif">Roboto</option>
                            <option value="'Open Sans', sans-serif">Open Sans</option>
                            <option value="'Poppins', sans-serif">Poppins</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Önizleme</label>
                        <div class="border rounded p-3 preview-box" id="previewText">
                            <h5>Başlık Örneği</h5>
                            <p>Bu bir önizleme metnidir. Seçtiğiniz yazı tipi ve boyut ayarları burada gösterilir.</p>
                            <p><strong>Kalın metin</strong> ve <em>italik metin</em> örnekleri.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Diğer Ayarlar -->
    <div class="row g-3">
        <div class="col-12 mb-3">
            <div class="card animate-card">
                <div class="card-header border-bottom animate-header">
                    <div class="d-flex align-items-center justify-content-between">
                        <h5 class="mb-0"><i class="fas fa-sliders-h me-2 text-blue"></i>Diğer Görünüm Ayarları</h5>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-check form-switch mb-3">
                                <input class="form-check-input" type="checkbox" id="compactLayoutSwitch">
                                <label class="form-check-label" for="compactLayoutSwitch">Kompakt Düzen</label>
                                <small class="d-block text-muted">Daha fazla içerik görmek için sayfa öğeleri arasındaki boşluğu azaltır</small>
                            </div>
                            
                            <div class="form-check form-switch mb-3">
                                <input class="form-check-input" type="checkbox" id="animationsSwitch" checked>
                                <label class="form-check-label" for="animationsSwitch">Animasyonlar</label>
                                <small class="d-block text-muted">Sayfa geçişleri ve etkileşimlerde animasyonları etkinleştirir</small>
                            </div>
                            
                            <div class="form-check form-switch mb-3">
                                <input class="form-check-input" type="checkbox" id="highContrastSwitch">
                                <label class="form-check-label" for="highContrastSwitch">Yüksek Kontrast</label>
                                <small class="d-block text-muted">Metin ve arka plan arasındaki kontrastı artırır (erişilebilirlik)</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Köşe Yuvarlaklığı</label>
                                <div class="d-flex align-items-center">
                                    <span class="me-2"><i class="fas fa-square"></i></span>
                                    <input type="range" class="form-range" min="0" max="4" step="1" id="borderRadiusRange" value="2">
                                    <span class="ms-2"><i class="fas fa-circle"></i></span>
                                </div>
                                <div class="d-flex mt-2 gap-2">
                                    <span class="badge bg-light-fixed text-dark radius-preview radius-0">Köşeli</span>
                                    <span class="badge bg-light-fixed text-dark radius-preview radius-1">Az</span>
                                    <span class="badge bg-light-fixed text-dark radius-preview radius-2">Orta</span>
                                    <span class="badge bg-light-fixed text-dark radius-preview radius-3">Yuvarlak</span>
                                    <span class="badge bg-light-fixed text-dark radius-preview radius-4">Çok Yuvarlak</span>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label fw-bold">Yan Menü Genişliği</label>
                                <select class="form-select" id="sidebarWidth">
                                    <option value="narrow">Dar</option>
                                    <option value="default" selected>Normal</option>
                                    <option value="wide">Geniş</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    
                    <hr>
                    
                    <div class="row mt-3">
                        <div class="col-12">
                            <h6 class="fw-bold mb-3">Simge Boyutu</h6>
                            <div class="d-flex gap-3 mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="iconSize" id="iconSizeSmall" value="small">
                                    <label class="form-check-label" for="iconSizeSmall">
                                        <i class="fas fa-home" style="font-size: 0.8rem;"></i> Küçük
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="iconSize" id="iconSizeNormal" value="normal" checked>
                                    <label class="form-check-label" for="iconSizeNormal">
                                        <i class="fas fa-home"></i> Normal
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="iconSize" id="iconSizeLarge" value="large">
                                    <label class="form-check-label" for="iconSizeLarge">
                                        <i class="fas fa-home" style="font-size: 1.2rem;"></i> Büyük
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light-fixed d-flex justify-content-between">
                    <button class="btn btn-outline-secondary animate-button" id="resetAllSettings">
                        <i class="fas fa-undo me-1"></i> Tümünü Sıfırla
                    </button>
                    <button class="btn btn-blue btn-lg animate-button" id="saveAllSettings">
                        <i class="fas fa-save me-1"></i> Tüm Ayarları Kaydet
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .color-option {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            cursor: pointer;
            border: 2px solid transparent;
            transition: all 0.2s;
        }

        .form-check-input:checked + .color-option {
            transform: scale(1.2);
            border-color: #fff;
            box-shadow: 0 0 0 1px #000;
        }

        .preview-box {
            background-color: #fff;
            transition: all 0.3s;
        }

        /* Koyu tema için önizleme */
        .preview-dark {
            background-color: #212529;
            color: #e9ecef;
        }
        
        /* Sabit renkler - tema değişiminden etkilenmez */
        .text-blue {
            color: #0d6efd !important;
        }
        
        .bg-light-fixed {
            background-color: #f8f9fa !important;
        }
        
        /* Köşe yuvarlaklığı önizleme stilleri */
        .radius-preview {
            padding: 0.5rem 0.75rem;
            display: inline-block;
        }
        
        .radius-0 {
            border-radius: 0;
        }
        
        .radius-1 {
            border-radius: 0.25rem;
        }
        
        .radius-2 {
            border-radius: 0.5rem;
        }
        
        .radius-3 {
            border-radius: 1rem;
        }
        
        .radius-4 {
            border-radius: 2rem;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            setTimeout(function() { $('.animate-header').addClass('animate-in'); }, 100);
            setTimeout(function() { $('.animate-card').addClass('animate-in'); }, 200);
            setTimeout(function() { $('.animate-button').addClass('animate-in'); }, 300);
        });
    </script>
} 