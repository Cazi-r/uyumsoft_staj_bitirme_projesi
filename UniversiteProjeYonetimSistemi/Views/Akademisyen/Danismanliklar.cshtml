@section Scripts {
    <script>
        $(document).ready(function() {
            // İstatistik sayılarını animasyonlu göster
            $('.stat-number').each(function() {
                var $this = $(this);
                var countTo = $this.attr('data-count');
                
                $({ countNum: $this.text() }).animate({
                    countNum: countTo
                }, {
                    duration: 1000,
                    easing: 'swing',
                    step: function() {
                        $this.text(Math.floor(this.countNum));
                    },
                    complete: function() {
                        $this.text(this.countNum);
                    }
                });
            });

            // Projeler/Index toolbar mantiginin birebir aynisi
            let danisStatusFilter = '';
            let danisCategoryFilter = '';

            function renderDanisActiveChips() {
                const $wrap = $('#danisActiveFilters');
                $wrap.empty();
                if (danisStatusFilter) {
                    $wrap.append(`<span class="badge bg-light text-dark border">Durum: ${danisStatusFilter} <button type="button" class="btn btn-sm btn-link p-0 ms-1 danis-remove-status"><i class="fas fa-times"></i></button></span>`);
                }
                if (danisCategoryFilter) {
                    $wrap.append(`<span class="badge bg-light text-dark border">Kategori: ${danisCategoryFilter} <button type="button" class="btn btn-sm btn-link p-0 ms-1 danis-remove-category"><i class="fas fa-times"></i></button></span>`);
                }
            }

            function filterDanisProjects() {
                const searchTerm = $('#searchInput').val().toLowerCase();
                let matchCount = 0;

                $('.project-row').each(function() {
                    const name = $(this).find('td:first .fw-bold').text().toLowerCase();
                    const student = $(this).find('td:nth-child(2) .fw-medium').text().toLowerCase();
                    const status = $(this).find('td:nth-child(4) .badge').text().trim();
                    const kategori = $(this).find('td:nth-child(3) .badge').text().trim();

                    const matchesSearch = name.includes(searchTerm) || student.includes(searchTerm);
                    const matchesStatus = danisStatusFilter === '' || status.includes(danisStatusFilter);
                    const matchesCategory = danisCategoryFilter === '' || kategori.includes(danisCategoryFilter);

                    const shouldShow = matchesSearch && matchesStatus && matchesCategory;
                    $(this).toggle(shouldShow);
                    if (shouldShow) matchCount++;
                });
            }

            // Arama
            $('#searchInput').on('keyup', filterDanisProjects);

            // Dropdown secimleri
            $('.danis-status-option').on('click', function(e){
                e.preventDefault();
                $('.danis-status-option').removeClass('active');
                $(this).addClass('active');
                danisStatusFilter = $(this).data('value');
                renderDanisActiveChips();
                filterDanisProjects();
            });
            $('.danis-category-option').on('click', function(e){
                e.preventDefault();
                $('.danis-category-option').removeClass('active');
                $(this).addClass('active');
                danisCategoryFilter = $(this).data('value');
                renderDanisActiveChips();
                filterDanisProjects();
            });

            // Chip kaldirma
            $('#danisActiveFilters').on('click', '.danis-remove-status', function(){
                danisStatusFilter = '';
                $('.danis-status-option').removeClass('active');
                $('.danis-status-option[data-value=""]').addClass('active');
                renderDanisActiveChips();
                filterDanisProjects();
            });
            $('#danisActiveFilters').on('click', '.danis-remove-category', function(){
                danisCategoryFilter = '';
                $('.danis-category-option').removeClass('active');
                $('.danis-category-option[data-value=""]').addClass('active');
                renderDanisActiveChips();
                filterDanisProjects();
            });
        });
    </script>
}

