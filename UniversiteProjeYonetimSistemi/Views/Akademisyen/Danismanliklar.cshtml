@model IEnumerable<UniversiteProjeYonetimSistemi.Models.Proje>

@{
    ViewData["Title"] = "Danışmanlık Yaptığım Projeler";
    var secilenDurum = ViewBag.SecilenDurum as string ?? "";
}

<div class="container py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4 page-header animate-header">
        <h1 class="page-title"><i class="fas fa-chalkboard-teacher me-2 text-primary"></i> Danışmanlık Yaptığım Projeler</h1>
        <div>
            <span class="badge bg-light text-dark border date-badge ms-2">
                <i class="far fa-calendar me-1"></i> @DateTime.Now.ToString("dd MMMM yyyy")
            </span>
        </div>
    </div>

    <!-- Gelişmiş İstatistik Kartları -->
    <div class="row mb-4">
        <div class="col-md-2 mb-3">
            <div class="card shadow-sm h-100 dashboard-card stat-card">
                <div class="card-body py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="fw-bold mb-2" style="color: #0d6efd;">Tüm Projeler</h6>
                            <h3 class="mb-1 stat-number" data-count="@ViewBag.TumProjeSayisi">0</h3>
                            <p class="text-muted mt-1 mb-0 small">Toplam danışmanlık</p>
                        </div>
                        <div class="rounded-circle bg-light p-3 d-flex align-items-center justify-content-center stat-icon">
                            <i class="fas fa-project-diagram fa-lg" style="color: #0d6efd;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-2 mb-3">
            <div class="card shadow-sm h-100 dashboard-card stat-card">
                <div class="card-body py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-success fw-bold mb-2">Devam Eden</h6>
                            <h3 class="mb-1 stat-number" data-count="@ViewBag.DevamEdenProjeSayisi">0</h3>
                            <p class="text-muted mt-1 mb-0 small">Aktif projeler</p>
                        </div>
                        <div class="rounded-circle bg-light p-3 d-flex align-items-center justify-content-center stat-icon">
                            <i class="fas fa-spinner fa-lg text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-2 mb-3">
            <div class="card shadow-sm h-100 dashboard-card stat-card">
                <div class="card-body py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-warning fw-bold mb-2">Beklemede</h6>
                            <h3 class="mb-1 stat-number" data-count="@ViewBag.BeklemedeProjeSayisi">0</h3>
                            <p class="text-muted mt-1 mb-0 small">Onay bekleyen</p>
                        </div>
                        <div class="rounded-circle bg-light p-3 d-flex align-items-center justify-content-center stat-icon">
                            <i class="fas fa-hourglass-half fa-lg text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-2 mb-3">
            <div class="card shadow-sm h-100 dashboard-card stat-card">
                <div class="card-body py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-info fw-bold mb-2">Bekleyen Değerlendirme</h6>
                            <h3 class="mb-1 stat-number" data-count="@ViewBag.BekleyenDegerlendirmeSayisi">0</h3>
                            <p class="text-muted mt-1 mb-0 small">Değerlendirilecek</p>
                        </div>
                        <div class="rounded-circle bg-light p-3 d-flex align-items-center justify-content-center stat-icon">
                            <i class="fas fa-clipboard-check fa-lg text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-2 mb-3">
            <div class="card shadow-sm h-100 dashboard-card stat-card">
                <div class="card-body py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-soft-danger fw-bold mb-2">Yaklaşan Aşamalar</h6>
                            <h3 class="mb-1 stat-number" data-count="@ViewBag.YaklasanAsamaSayisi">0</h3>
                            <p class="text-muted mt-1 mb-0 small">7 gün içinde</p>
                        </div>
                        <div class="rounded-circle bg-light p-3 d-flex align-items-center justify-content-center stat-icon">
                            <i class="fas fa-tasks fa-lg text-soft-danger"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-2 mb-3">
            <div class="card shadow-sm h-100 dashboard-card stat-card">
                <div class="card-body py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-success fw-bold mb-2">Tamamlanan</h6>
                            <h3 class="mb-1 stat-number" data-count="@ViewBag.TamamlananProjeSayisi">0</h3>
                            <p class="text-muted mt-1 mb-0 small">Bu ay</p>
                        </div>
                        <div class="rounded-circle bg-light p-3 d-flex align-items-center justify-content-center stat-icon">
                            <i class="fas fa-check-circle fa-lg text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Projeler sayfasindaki toolbar ile ayni -->
    <div class="page-toolbar shadow-sm border rounded bg-white mb-3">
        <div class="d-flex flex-wrap align-items-center gap-2">
            <!-- Arama -->
            <div class="flex-grow-1" style="min-width: 240px;">
                <div class="input-group">
                    <span class="input-group-text bg-light border-0"><i class="fas fa-search text-muted"></i></span>
                    <input type="text" id="searchInput" class="form-control border-0 bg-light" placeholder="Proje veya ogrenci ara...">
                </div>
            </div>

            <!-- Filtre butonlari (dropdown) -->
            <div class="d-flex align-items-center flex-wrap gap-2">
                <div class="dropdown">
                    <button class="btn btn-sm btn-light border filter-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-filter me-1"></i> Durum
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item danis-status-option active" data-value="" href="#">Tum Durumlar</a></li>
                        <li><a class="dropdown-item danis-status-option" data-value="Beklemede" href="#">Beklemede</a></li>
                        <li><a class="dropdown-item danis-status-option" data-value="Atanmis" href="#">Atanmis</a></li>
                        <li><a class="dropdown-item danis-status-option" data-value="Devam" href="#">Devam</a></li>
                        <li><a class="dropdown-item danis-status-option" data-value="Tamamlandi" href="#">Tamamlandi</a></li>
                        <li><a class="dropdown-item danis-status-option" data-value="Iptal" href="#">Iptal</a></li>
                    </ul>
                </div>

                <div class="dropdown">
                    <button class="btn btn-sm btn-light border filter-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-tags me-1"></i> Kategori
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item danis-category-option active" data-value="" href="#">Tum Kategoriler</a></li>
                        @if (ViewBag.Kategoriler != null)
                        {
                            @foreach (var kategori in ViewBag.Kategoriler)
                            {
                                <li><a class="dropdown-item danis-category-option" data-value="@kategori.Ad" href="#">@kategori.Ad</a></li>
                            }
                        }
                    </ul>
                </div>

                <!-- Secili filtre chipleri -->
                <div id="danisActiveFilters" class="d-flex align-items-center flex-wrap gap-2"></div>
            </div>

            <!-- CTA bos (gerekirse eklenir) -->
            <div class="ms-auto"></div>
        </div>
    </div>

    <!-- Ana Proje Tablosu -->
    <div class="card shadow-sm mb-4 main-table">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-bold">
                <i class="fas fa-list me-2 text-primary"></i> 
                @if (!string.IsNullOrEmpty(secilenDurum))
                {
                    <span>@secilenDurum Durumundaki Projeler</span>
                        }
                        else
                        {
                    <span>Tüm Danışmanlık Projeleri</span>
                        }
                    </h5>
            <div>
                    @if (!string.IsNullOrEmpty(secilenDurum))
                    {
                    <a asp-action="Danismanliklar" class="btn btn-sm btn-outline-secondary me-2">
                        <i class="fas fa-times me-1"></i> Filtreyi Temizle
                        </a>
                    }
            </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                            <th class="ps-3">Proje Adı</th>
                                    <th>Öğrenci</th>
                            <th>Kategori</th>
                                    <th>Durum</th>
                            <th>Teslim Tarihi</th>
                                    <th>Son Güncelleme</th>
                            <th class="text-end pe-3">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var proje in Model.OrderByDescending(p => p.UpdatedAt))
                                    {
                                <tr class="project-row">
                                    <td class="fw-medium ps-3">
                                        <div class="d-flex align-items-center">
                                            <div class="me-2">
                                                <i class="fas fa-folder text-warning"></i>
                                            </div>
                                            <div>
                                                <div class="fw-bold">@proje.Ad</div>
                                                @if (!string.IsNullOrEmpty(proje.Aciklama))
                                                {
                                                    <small class="text-muted">@(proje.Aciklama.Length > 50 ? proje.Aciklama.Substring(0, 50) + "..." : proje.Aciklama)</small>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (proje.Ogrenci != null)
                                        {
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm bg-info text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px; font-size: 14px;">
                                                    @proje.Ogrenci.Ad.Substring(0,1)@proje.Ogrenci.Soyad.Substring(0,1)
                                                </div>
                                                <div>
                                                    <div class="fw-medium">@proje.Ogrenci.Ad @proje.Ogrenci.Soyad</div>
                                                    <small class="text-muted">@proje.Ogrenci.OgrenciNo</small>
                                                </div>
                                            </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                    <td>
                                        @if (proje.Kategori != null)
                                        {
                                            <span class="badge" style="background-color: @proje.Kategori.Renk">@proje.Kategori.Ad</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Kategori Yok</span>
                                        }
                                    </td>
                                            <td>
                                                @{
                                                    string statusBadgeClass = "";
                                            string statusBadgeIcon = "";
                                                    switch (proje.Status)
                                                    {
                                                case "Beklemede": 
                                                    statusBadgeClass = "bg-warning"; 
                                                    statusBadgeIcon = "fa-hourglass-half";
                                                    break;
                                                case "Atanmis": 
                                                    statusBadgeClass = "bg-info"; 
                                                    statusBadgeIcon = "fa-user-check";
                                                    break;
                                                case "Devam": 
                                                    statusBadgeClass = "bg-primary"; 
                                                    statusBadgeIcon = "fa-spinner";
                                                    break;
                                                case "Tamamlandi": 
                                                    statusBadgeClass = "bg-success"; 
                                                    statusBadgeIcon = "fa-check-circle";
                                                    break;
                                                case "Iptal": 
                                                    statusBadgeClass = "bg-soft-danger"; 
                                                    statusBadgeIcon = "fa-ban";
                                                    break;
                                                default: 
                                                    statusBadgeClass = "bg-secondary"; 
                                                    statusBadgeIcon = "fa-question-circle";
                                                    break;
                                            }
                                        }
                                        <span class="badge @statusBadgeClass">
                                            <i class="fas @statusBadgeIcon me-1"></i> @proje.Status
                                        </span>
                                    </td>
                                    <td>
                                        @if (proje.TeslimTarihi != null)
                                        {
                                            var kalanGun = (proje.TeslimTarihi.Value - DateTime.Today).Days;
                                            <div>
                                                <div>@proje.TeslimTarihi?.ToString("dd.MM.yyyy")</div>
                                                @if (proje.Status == "Tamamlandi")
                                                {
                                                    <!-- Tamamlanmış projeler için gün sayısı gösterilmez -->
                                                }
                                                else if (kalanGun < 0)
                                                {
                                                    <small class="badge bg-danger text-white">teslim edilemedi</small>
                                                }
                                                else
                                                {
                                                    var teslimBadgeClass = kalanGun <= 3 ? "bg-danger" : (kalanGun <= 7 ? "bg-warning" : "bg-info");
                                                    <small class="badge @teslimBadgeClass text-white">@kalanGun gün kaldı</small>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <i class="far fa-calendar-alt me-1 text-muted"></i> 
                                            <span class="text-muted">Teslim tarihi yok</span>
                                        }
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @proje.UpdatedAt.ToString("dd.MM.yyyy HH:mm")
                                                </small>
                                            </td>
                                    <td class="text-end pe-3">
                                                <div class="btn-group">
                                            <a asp-controller="Proje" asp-action="Details" asp-route-id="@proje.Id" class="btn btn-sm btn-outline-primary" title="Proje Detayı">
                                                        <i class="fas fa-eye me-1"></i> Proje Detayı
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                <td colspan="7" class="text-center py-5">
                                    <div class="py-4">
                                                <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
                                                @if (!string.IsNullOrEmpty(secilenDurum))
                                                {
                                            <p class="mb-0">@secilenDurum durumunda hiç projeniz bulunmuyor.</p>
                                            <a asp-action="Danismanliklar" class="btn btn-primary mt-3">Tüm Projeleri Göster</a>
                                                }
                                                else
                                                {
                                            <p class="mb-0">Henüz danışmanlık yaptığınız herhangi bir proje bulunmuyor.</p>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
        </div>
    </div>
    
    <!-- Alt Bölüm - Üç Sütun -->
    <div class="row bottom-section">
        <!-- Sol Sütun - Son Yorumlar -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm h-100 main-table animate-card">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">
                        <i class="fas fa-comments me-2 text-info"></i> Son Yorumlar
                    </h5>
                    <span class="badge bg-info">Son 5</span>
                </div>
                <div class="card-body">
                    @if (ViewBag.SonYorumlar != null && ViewBag.SonYorumlar.Count > 0)
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var yorum in ViewBag.SonYorumlar)
                            {
                                <div class="list-group-item border-0 border-bottom py-3 comment-item table-hover-item">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <h6 class="mb-0 fw-medium">
                                            <a asp-controller="Proje" asp-action="Details" asp-route-id="@yorum.Proje.Id" class="text-decoration-none">
                                                @yorum.Proje.Ad
                                            </a>
                                        </h6>
                                        <small class="text-muted">
                                            @((DateTime.Now - yorum.OlusturmaTarihi).TotalDays < 1 ? 
                                                $"{(int)(DateTime.Now - yorum.OlusturmaTarihi).TotalHours} saat önce" : 
                                                $"{(int)(DateTime.Now - yorum.OlusturmaTarihi).TotalDays} gün önce")
                                        </small>
                                    </div>
                                    <p class="mb-2">@yorum.Icerik</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            <i class="fas fa-user me-1"></i> 
                                            @if (yorum.Ogrenci != null)
                                            {
                                                @(yorum.Ogrenci.Ad + " " + yorum.Ogrenci.Soyad)
                                            }
                                            else if (yorum.Akademisyen != null)
                                            {
                                                @(yorum.Akademisyen.Ad + " " + yorum.Akademisyen.Soyad)
                                            }
                                        </small>
                                        <a asp-controller="Proje" asp-action="Details" asp-route-id="@yorum.Proje.Id" class="btn btn-sm btn-primary">
                                            <i class="fas fa-eye me-1"></i> Görüntüle
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-comments fa-4x text-muted mb-3"></i>
                            <h6 class="text-muted">Henüz Yorum Bulunmuyor</h6>
                            <p class="text-muted mb-3">Danışmanlık yaptığınız projelere henüz yorum yapılmamış.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Orta Sütun - Yaklaşan Teslimler -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm h-100 main-table animate-card">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">
                        <i class="fas fa-calendar-alt me-2 text-warning"></i> Yaklaşan Teslimler
                    </h5>
                    <span class="badge bg-warning text-dark">7 gün içinde</span>
                </div>
                <div class="card-body">
                    @if (ViewBag.YaklasanTeslimler != null && ViewBag.YaklasanTeslimler.Count > 0)
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var proje in ViewBag.YaklasanTeslimler)
                            {
                                DateTime teslimTarihi;
                                int kalanGun;
                                string badgeClass;
                                
                                try 
                                {
                                    teslimTarihi = Convert.ToDateTime(proje.TeslimTarihi);
                                    kalanGun = (teslimTarihi - DateTime.Today).Days;
                                    badgeClass = kalanGun <= 3 ? "soft-danger" : (kalanGun <= 7 ? "warning" : "info");
                                }
                                catch
                                {
                                    kalanGun = 0;
                                    badgeClass = "secondary";
                                }
                                
                                <div class="list-group-item border-0 border-bottom py-3 meeting-item table-hover-item">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <h6 class="mb-0 fw-medium">@proje.Ad</h6>
                                        <span class="badge bg-@badgeClass">@kalanGun gün</span>
                                    </div>
                                    <div class="mb-2">
                                        @if (proje.Ogrenci != null)
                                        {
                                            <small class="text-muted">
                                                <i class="fas fa-user-graduate me-1"></i>
                                            @proje.Ogrenci.Ad @proje.Ogrenci.Soyad
                                            </small>
                                        }
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            <i class="far fa-calendar me-1"></i> 
                                            @(proje.TeslimTarihi != null ? Convert.ToDateTime(proje.TeslimTarihi).ToString("dd.MM.yyyy") : "-")
                                        </small>
                                        <a asp-controller="Proje" asp-action="Details" asp-route-id="@proje.Id" class="btn btn-sm btn-primary">
                                            <i class="fas fa-eye me-1"></i> Detaylar
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-calendar-check fa-3x text-muted mb-3"></i>
                            <h6 class="text-muted">Yaklaşan Teslim Yok</h6>
                            <p class="text-muted">7 gün içinde teslim tarihi olan proje bulunmuyor.</p>
                        </div>
                    }
                </div>
                </div>
            </div>

        <!-- Sağ Sütun - Yaklaşan Proje Aşamaları -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm h-100 main-table animate-card">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">
                        <i class="fas fa-tasks me-2 text-primary"></i> Yaklaşan Proje Aşamaları
                    </h5>
                    <span class="badge bg-primary">7 gün içinde</span>
                </div>
                <div class="card-body">
                    @if (ViewBag.YaklasanAsamalar != null && ViewBag.YaklasanAsamalar.Count > 0)
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var asama in ViewBag.YaklasanAsamalar)
                            {
                                DateTime bitisTarihi;
                                int kalanGun;
                                string badgeClass;
                                
                                try 
                                {
                                    bitisTarihi = Convert.ToDateTime(asama.BitisTarihi);
                                    kalanGun = (bitisTarihi - DateTime.Today).Days;
                                    badgeClass = kalanGun <= 3 ? "soft-danger" : (kalanGun <= 7 ? "warning" : "info");
                                }
                                catch
                                {
                                    kalanGun = 0;
                                    badgeClass = "secondary";
                                }
                                
                                <div class="list-group-item border-0 border-bottom py-3 stage-item table-hover-item">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <h6 class="mb-0 fw-medium">
                                            <a asp-controller="Proje" asp-action="Details" asp-route-id="@asama.ProjeId" class="text-decoration-none">
                                                @asama.AsamaAdi
                                            </a>
                                        </h6>
                                        <span class="badge bg-@badgeClass">@kalanGun gün</span>
                                    </div>
                                    <p class="mb-2">
                                        @if (asama.Proje != null)
                                        {
                                            <i class="fas fa-project-diagram me-1"></i>
                                            @asama.Proje.Ad
                                        }
                                        @if (!string.IsNullOrEmpty(asama.Aciklama))
                                        {
                                            <br><small class="text-muted">@asama.Aciklama</small>
                                        }
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            <i class="far fa-calendar me-1"></i> 
                                            @(asama.BitisTarihi != null ? Convert.ToDateTime(asama.BitisTarihi).ToString("dd.MM.yyyy") : "-")
                                        </small>
                                        <a asp-controller="Proje" asp-action="Details" asp-route-id="@asama.ProjeId" class="btn btn-sm btn-primary">
                                            <i class="fas fa-eye me-1"></i> Detaylar
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-tasks fa-4x text-muted mb-3"></i>
