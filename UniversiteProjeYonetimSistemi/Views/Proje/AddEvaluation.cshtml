@model UniversiteProjeYonetimSistemi.Models.ViewModels.DegerlendirmeViewModel

@{
    ViewData["Title"] = "Değerlendirme Ekle";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Proje Değerlendirmesi Ekle</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="AddEvaluation" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <input type="hidden" asp-for="ProjeId" />
                        
                        <div class="mb-3">
                            <label asp-for="DegerlendirmeTipi" class="form-label">Değerlendirme Tipi</label>
                            <select asp-for="DegerlendirmeTipi" asp-items="ViewBag.DegerlendirmeTipleri" class="form-select">
                                <option value="">-- Değerlendirme Tipi Seçin --</option>
                            </select>
                            <span asp-validation-for="DegerlendirmeTipi" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Puan" class="form-label">Puan (0-100)</label>
                            <input asp-for="Puan" class="form-control" type="number" min="0" max="100" />
                            <span asp-validation-for="Puan" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Aciklama" class="form-label">Açıklama / Geri Bildirim</label>
                            <textarea asp-for="Aciklama" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Aciklama" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@Model.ProjeId" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Vazgeç
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Değerlendirmeyi Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
} 