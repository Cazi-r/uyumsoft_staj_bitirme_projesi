@model UniversiteProjeYonetimSistemi.Models.Proje

@{
    ViewData["Title"] = "Proje Atama";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h1>Proje Atama</h1>
        </div>
        <div class="col-auto">
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Proje Detaylarına Dön
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5>@Model.Ad</h5>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-12">
                    <h6 class="text-primary">Proje Bilgileri</h6>
                    <dl class="row">
                        <dt class="col-sm-3">Proje Durumu:</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-@(Model.Status == "Tamamlandi" ? "success" : 
                                                  Model.Status == "Devam" ? "primary" : 
                                                  Model.Status == "Beklemede" ? "warning" : 
                                                  Model.Status == "Iptal" ? "danger" : "secondary")">
                                @Model.Status
                            </span>
                        </dd>
                        
                        <dt class="col-sm-3">Oluşturulma Tarihi:</dt>
                        <dd class="col-sm-9">@Model.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")</dd>
                        
                        <dt class="col-sm-3">Kategori:</dt>
                        <dd class="col-sm-9">@(Model.Kategori?.Ad ?? "Kategorisiz")</dd>
                        
                        <dt class="col-sm-3">Öğrenci:</dt>
                        <dd class="col-sm-9">
                            @if (Model.Ogrenci != null)
                            {
                                <span class="fw-bold">@Model.Ogrenci.Ad @Model.Ogrenci.Soyad</span>
                                @if (!string.IsNullOrEmpty(Model.Ogrenci.OgrenciNo))
                                {
                                    <span class="text-muted">(@Model.Ogrenci.OgrenciNo)</span>
                                }
                            }
                            else
                            {
                                <span class="text-danger">Öğrenci atanmamış</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-3">Mevcut Danışman:</dt>
                        <dd class="col-sm-9">@(Model.Mentor != null ? $"{Model.Mentor.Unvan} {Model.Mentor.Ad} {Model.Mentor.Soyad}" : "Atanmamış")</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Assign" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                
                @if (Model.OgrenciId.HasValue)
                {
                    <input type="hidden" name="ogrenciId" value="@Model.OgrenciId.Value" />
                }
                else
                {
                    <input type="hidden" name="ogrenciId" value="0" />
                    <div class="alert alert-warning mb-3">
                        <i class="fas fa-exclamation-triangle"></i> Bu projeye henüz öğrenci atanmamış. Lütfen önce bir öğrenci atayınız.
                    </div>
                }
                
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group mb-3">
                            <label for="mentorId" class="form-label">Danışman Seçimi</label>
                            <select name="mentorId" id="mentorId" class="form-select">
                                <option value="0">-- Danışman Seçiniz --</option>
                                @foreach (var item in ViewBag.Akademisyenler)
                                {
                                    if (Model.MentorId.HasValue && Model.MentorId.Value == int.Parse(item.Value))
                                    {
                                        <option value="@item.Value" selected>@item.Text</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            </select>
                            <small class="text-muted">Projenin danışmanını seçin</small>
                        </div>
                    </div>
                </div>
                
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Not: Proje danışmanı değiştirildikten sonra, projenin durumu otomatik olarak "Atanmış" olarak güncellenecektir.
                </div>
                
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-user-check"></i> Danışman Ata
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Danışman seçimi için gelişmiş seçim kutusu (isteğe bağlı)
