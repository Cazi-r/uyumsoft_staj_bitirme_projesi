@model UniversiteProjeYonetimSistemi.Models.Proje

@{
    ViewData["Title"] = "Yeni Proje";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h1>Yeni Proje Oluştur</h1>
        </div>
        <div class="col-auto">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Listeye Dön
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Ad" class="control-label"></label>
                            <input asp-for="Ad" class="form-control" />
                            <span asp-validation-for="Ad" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Status" class="control-label"></label>
                            <select asp-for="Status" class="form-select" asp-items="ViewBag.Durumlar"></select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="KategoriId" class="control-label">Kategori</label>
                            <select asp-for="KategoriId" class="form-select" asp-items="ViewBag.Kategoriler"></select>
                            <span asp-validation-for="KategoriId" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="TeslimTarihi" class="control-label"></label>
                            <input asp-for="TeslimTarihi" class="form-control" type="date" />
                            <span asp-validation-for="TeslimTarihi" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="OgrenciId" class="control-label">Öğrenci</label>
                            <select asp-for="OgrenciId" class="form-select" asp-items="ViewBag.Ogrenciler">
                                <option value="">-- Öğrenci Seçiniz --</option>
                            </select>
                            <span asp-validation-for="OgrenciId" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="MentorId" class="control-label">Danışman</label>
                            <select asp-for="MentorId" class="form-select" asp-items="ViewBag.Akademisyenler">
                                <option value="">-- Danışman Seçiniz --</option>
                            </select>
                            <span asp-validation-for="MentorId" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Aciklama" class="control-label"></label>
                            <textarea asp-for="Aciklama" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Aciklama" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Form elemanlarını gelişmiş hale getirmek için select2 kullanabilirsiniz
            // $('.form-select').select2();
        });
    </script>
} 