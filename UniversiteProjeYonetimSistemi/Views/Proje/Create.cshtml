@model UniversiteProjeYonetimSistemi.Models.Proje

@{
    ViewData["Title"] = "Yeni Proje";
}

<div class="container mt-4">
    <div class="row mb-3 animate-header">
        <div class="col">
            <h1>Yeni Proje Oluştur</h1>
        </div>
        <div class="col-auto">
            <a asp-action="Index" class="btn btn-secondary animate-button">
                <i class="fas fa-arrow-left"></i> Listeye Dön
            </a>
        </div>
    </div>

    <div class="card animate-card">
        <div class="card-body">
            <form asp-action="Create" method="post" class="animate-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Ad" class="control-label">Proje Adı</label>
                            <input asp-for="Ad" class="form-control" />
                            <span asp-validation-for="Ad" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="KategoriId" class="control-label">Kategori</label>
                            <select asp-for="KategoriId" class="form-select" asp-items="ViewBag.Kategoriler">
                                <option value="">-- Kategori Seçiniz --</option>
                            </select>
                            <span asp-validation-for="KategoriId" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="TeslimTarihi" class="control-label">Tahmini Teslim Tarihi</label>
                            <input asp-for="TeslimTarihi" class="form-control" type="date" />
                            <span asp-validation-for="TeslimTarihi" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        @if (User.IsInRole("Admin") || User.IsInRole("Akademisyen"))
                        {
                            <div class="form-group mb-3">
                                <label asp-for="OgrenciId" class="control-label">Öğrenci</label>
                                <select asp-for="OgrenciId" class="form-select" asp-items="ViewBag.Ogrenciler">
                                    <option value="">-- Öğrenci Seçiniz --</option>
                                </select>
                                <span asp-validation-for="OgrenciId" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group mb-3">
                                <label asp-for="MentorId" class="control-label">Danışman</label>
                                <select asp-for="MentorId" class="form-select" asp-items="ViewBag.Akademisyenler">
                                    <option value="">-- Danışman Seçiniz --</option>
                                </select>
                                <span asp-validation-for="MentorId" class="text-danger"></span>
                            </div>

                            <input type="hidden" asp-for="Status" value="Beklemede" />
                        }
                        else if (User.IsInRole("Ogrenci"))
                        {
                            @if (ViewBag.OgrenciId != null)
                            {
                                <div class="form-group mb-3">
                                    <label class="control-label">Öğrenci</label>
                                    <input type="text" class="form-control" value="@ViewBag.OgrenciAd" readonly />
                                    <input type="hidden" asp-for="OgrenciId" value="@ViewBag.OgrenciId" />
                                </div>
                                
                                <div class="form-group mb-3">
                                    <label asp-for="MentorId" class="control-label">Danışman (İsteğe Bağlı)</label>
                                    <select asp-for="MentorId" class="form-select" asp-items="ViewBag.Akademisyenler">
                                        <option value="">-- Danışman Seçiniz --</option>
                                    </select>
                                    <small class="text-muted">Danışman seçmezseniz, projeniz değerlendirildikten sonra size bir danışman atanacaktır.</small>
                                </div>
                                
                                <input type="hidden" asp-for="Status" value="Beklemede" />
                            }
                        }
                        
                        <div class="form-group mb-3">
                            <label asp-for="Aciklama" class="control-label">Proje Açıklaması</label>
                            <textarea asp-for="Aciklama" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Aciklama" class="text-danger"></span>
                        </div>

                        <!-- Kaynaklar Bölümü -->
                        <div class="form-group mb-3">
                            <label class="control-label">Proje Kaynakları</label>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="kaynakEkle" name="KaynakEklemekIstiyorum" value="true">
                                <label class="form-check-label" for="kaynakEkle">
                                    Kaynak eklemek istiyorum
                                </label>
                                <small class="form-text text-muted d-block">İşaretlerseniz, proje kaydedildikten sonra kaynak ekleme sayfası açılacaktır.</small>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary animate-button">
                        <i class="fas fa-save"></i> Kaydet
                    </button>
                    
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Staggered Page Load Animations - Akademisyen Dashboard tarzı animasyonlar
            setTimeout(function() {
                $('.animate-header').addClass('animate-in');
            }, 100);
            
            setTimeout(function() {
                $('.animate-card').addClass('animate-in');
            }, 200);
            
            setTimeout(function() {
                $('.animate-form').addClass('animate-in');
            }, 300);
            
            setTimeout(function() {
                $('.animate-button').addClass('animate-in');
            }, 400);
            
            // Form elemanlarını gelişmiş hale getirmek için select2 kullanabilirsiniz
            // $('.form-select').select2();
        });
    </script>
} 