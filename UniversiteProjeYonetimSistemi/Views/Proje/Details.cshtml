@model UniversiteProjeYonetimSistemi.Models.Proje

@{
    ViewData["Title"] = "Proje Detayları";
}

<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="col">
            <h1>@Model.Ad</h1>
        </div>
        <div class="col-auto">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Listeye Dön
            </a>
            @if (User.IsInRole("Admin") || User.IsInRole("Akademisyen"))
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Düzenle
                </a>
                <a asp-action="Assign" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-user-plus"></i> Ata
                </a>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <!-- Proje Detayları -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5>Proje Detayları</h5>
                    @if (User.IsInRole("Admin") || (User.IsInRole("Akademisyen") && ViewBag.IsCurrentUserMentor))
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-warning">
                            <i class="fas fa-edit"></i> Düzenle
                        </a>
                    }
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Durum:</div>
                        <div class="col-md-8">
                            @{
                                var statusClass = Model.Status switch
                                {
                                    "Beklemede" => "badge bg-secondary",
                                    "Atanmis" => "badge bg-info",
                                    "Devam" => "badge bg-primary",
                                    "Tamamlandi" => "badge bg-success",
                                    "Iptal" => "badge bg-danger",
                                    _ => "badge bg-secondary"
                                };
                            }
                            <span class="@statusClass">@Model.Status</span>
                            
                            @if (User.IsInRole("Admin") || (User.IsInRole("Akademisyen") && ViewBag.IsCurrentUserMentor))
                            {
                                <div class="mt-2">
                                    @if (Model.Status == "Atanmis")
                                    {
                                        <form asp-action="UpdateStatusToInProgress" asp-route-id="@Model.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-primary" onclick="return confirm('Bu projeyi devam ediyor olarak işaretlemek istiyor musunuz?')">
                                                <i class="fas fa-play"></i> Projeyi Başlat
                                            </button>
                                        </form>
                                    }
                                    else if (Model.Status == "Devam")
                                    {
                                        <form asp-action="CompleteProject" asp-route-id="@Model.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-success" onclick="return confirm('Bu projeyi tamamlanmış olarak işaretlemek istiyor musunuz?')">
                                                <i class="fas fa-check-circle"></i> Projeyi Tamamla
                                            </button>
                                        </form>
                                    }
                                    
                                    @if (Model.Status != "Tamamlandi" && Model.Status != "Iptal")
                                    {
                                        <form asp-action="CancelProject" asp-route-id="@Model.Id" method="post" class="d-inline ms-2">
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Bu projeyi iptal etmek istediğinizden emin misiniz? Bu işlem geri alınamaz.')">
                                                <i class="fas fa-times-circle"></i> Projeyi İptal Et
                                            </button>
                                        </form>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Kategori:</div>
                        <div class="col-md-8">@(Model.Kategori?.Ad ?? "-")</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Öğrenci:</div>
                        <div class="col-md-8">@(Model.Ogrenci != null ? $"{Model.Ogrenci.Ad} {Model.Ogrenci.Soyad} ({Model.Ogrenci.OgrenciNo})" : "-")</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Danışman:</div>
                        <div class="col-md-8">@(Model.Mentor != null ? $"{Model.Mentor.Unvan} {Model.Mentor.Ad} {Model.Mentor.Soyad}" : "-")</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Oluşturulma Tarihi:</div>
                        <div class="col-md-8">@Model.OlusturmaTarihi.ToShortDateString()</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Teslim Tarihi:</div>
                        <div class="col-md-8">@(Model.TeslimTarihi.HasValue ? Model.TeslimTarihi.Value.ToShortDateString() : "-")</div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 fw-bold">Açıklama:</div>
                        <div class="col-md-8">@Html.Raw(Model.Aciklama.Replace("\n", "<br/>"))</div>
                    </div>
                </div>
            </div>

            <!-- Proje Aşamaları -->
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5>Proje Aşamaları</h5>
                    @if (User.IsInRole("Admin") || (User.IsInRole("Akademisyen") && ViewBag.IsCurrentUserMentor))
                        {
                        <a asp-action="AddStage" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">
                                <i class="fas fa-plus"></i> Aşama Ekle
                        </a>
                        }
                    </div>
                    <div class="card-body">
                    @if (Model.Asamalar != null && Model.Asamalar.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Aşama</th>
                                        <th>Başlangıç</th>
                                        <th>Bitiş</th>
                                        <th>Durum</th>
                                        <th>İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var asama in Model.Asamalar.OrderBy(a => a.SiraNo))
                                    {
                                        <tr>
                                            <td>
                                                <strong>@asama.AsamaAdi</strong>
                                                @if (!string.IsNullOrEmpty(asama.Aciklama))
                                                {
                                                    <br /><small class="text-muted">@asama.Aciklama</small>
                                                }
                                            </td>
                                            <td>@(asama.BaslangicTarihi?.ToShortDateString() ?? "-")</td>
                                            <td>@(asama.BitisTarihi?.ToShortDateString() ?? "-")</td>
                                            <td>
                                                @if (asama.Tamamlandi)
                                                {
                                                    <span class="badge bg-success">Tamamlandı</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">Devam Ediyor</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group">
                                                    @if (!asama.Tamamlandi)
                                                    {
                                                        <form asp-action="UpdateStageStatus" method="post" class="d-inline">
                                                            <input type="hidden" name="id" value="@asama.Id" />
                                                            <input type="hidden" name="projeId" value="@Model.Id" />
                                                            <input type="hidden" name="tamamlandi" value="true" />
                                                            <button type="submit" class="btn btn-sm btn-outline-success" @(User.IsInRole("Admin") || (User.IsInRole("Akademisyen") && ViewBag.IsCurrentUserMentor) ? "" : "disabled")>
                                                                <i class="fas fa-check"></i> Tamamla
                                                            </button>
                                                        </form>
                                                    }
                                                    else
                                                    {
                                                        <form asp-action="UpdateStageStatus" method="post" class="d-inline">
                                                            <input type="hidden" name="id" value="@asama.Id" />
                                                            <input type="hidden" name="projeId" value="@Model.Id" />
                                                            <input type="hidden" name="tamamlandi" value="false" />
                                                            <button type="submit" class="btn btn-sm btn-outline-secondary" @(User.IsInRole("Admin") || (User.IsInRole("Akademisyen") && ViewBag.IsCurrentUserMentor) ? "" : "disabled")>
                                                                <i class="fas fa-undo"></i> Geri Al
                                                            </button>
                                                        </form>
                                                    }
                                                    
                                                    @if (User.IsInRole("Admin") || (User.IsInRole("Akademisyen") && ViewBag.IsCurrentUserMentor))
                                                    {
                                                        <form asp-action="DeleteStage" method="post" class="d-inline" onsubmit="return confirm('Bu aşamayı silmek istediğinize emin misiniz?');">
                                                            <input type="hidden" name="id" value="@asama.Id" />
                                                            <input type="hidden" name="projeId" value="@Model.Id" />
                                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                                <i class="fas fa-trash"></i>
                                                </button>
                                                        </form>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Henüz aşama eklenmemiş.</p>
                    }
                </div>
            </div>
            
            <!-- Proje Dosyaları -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5>Proje Dosyaları</h5>
                    <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#uploadFileModal">
                        <i class="fas fa-upload"></i> Dosya Yükle
                    </button>
                </div>
                <div class="card-body">
                    @if (Model.Dosyalar != null && Model.Dosyalar.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Dosya Adı</th>
                                        <th>Boyut</th>
                                        <th>Tür</th>
                                        <th>Yükleme Tarihi</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var dosya in Model.Dosyalar)
                                    {
                                        <tr>
                                            <td>@dosya.DosyaAdi</td>
                                            <td>@(dosya.DosyaBoyutu / 1024) KB</td>
                                            <td>@dosya.DosyaTipi</td>
                                            <td>@dosya.YuklemeTarihi.ToShortDateString()</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("DownloadFile", new { id = dosya.Id })" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-download"></i>
                                                    </a>
                                                    @if (User.IsInRole("Admin") || (User.IsInRole("Akademisyen") && ViewBag.IsCurrentUserMentor))
                                                    {
                                                        <form asp-action="DeleteFile" asp-route-id="@dosya.Id" asp-route-projeId="@Model.Id" method="post" onsubmit="return confirm('Bu dosyayı silmek istediğinize emin misiniz?');">
                                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                            <i class="fas fa-trash"></i>
                                                            </button>
                                                        </form>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Henüz dosya yüklenmemiş.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Proje Değerlendirmeleri -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5>Değerlendirmeler</h5>
                    @if (User.IsInRole("Admin") || (User.IsInRole("Akademisyen") && ViewBag.IsCurrentUserMentor))
                    {
                        <a asp-action="AddEvaluation" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">
                            <i class="fas fa-plus"></i> Değerlendirme Ekle
                        </a>
                    }
                </div>
                <div class="card-body">
                    @if (Model.Degerlendirmeler != null && Model.Degerlendirmeler.Any())
                    {
                        @foreach (var degerlendirme in Model.Degerlendirmeler.OrderByDescending(d => d.DegerlendirmeTarihi))
                        {
                            <div class="card mb-2">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <span class="badge bg-primary">@degerlendirme.DegerlendirmeTipi</span>
                                    <div>
                                    <small>@degerlendirme.DegerlendirmeTarihi.ToShortDateString()</small>
                                        @if (User.IsInRole("Admin") || (User.IsInRole("Akademisyen") && User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value == degerlendirme.AkademisyenId.ToString()))
                                        {
                                            <form asp-action="DeleteEvaluation" method="post" class="d-inline" onsubmit="return confirm('Bu değerlendirmeyi silmek istediğinize emin misiniz?');">
                                                <input type="hidden" name="id" value="@degerlendirme.Id" />
                                                <input type="hidden" name="projeId" value="@Model.Id" />
                                                <button type="submit" class="btn btn-sm btn-link text-danger p-0 ms-2">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">Puan: @degerlendirme.Puan / 100</h5>
                                    <p class="card-text">@degerlendirme.Aciklama</p>
                                    <small class="text-muted">Değerlendiren: @(degerlendirme.Akademisyen?.Unvan + " " + degerlendirme.Akademisyen?.Ad + " " + degerlendirme.Akademisyen?.Soyad)</small>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">Henüz değerlendirme yapılmamış.</p>
                    }
                </div>
            </div>

            <!-- Yorumlar -->
            <div class="card">
                <div class="card-header">
                    <h5>Yorumlar</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AddComment" method="post">
                        <input type="hidden" name="ProjeId" value="@Model.Id" />
                        
                    <div class="mb-3">
                            <textarea name="Icerik" class="form-control" rows="3" placeholder="Yorumunuzu yazın..." required></textarea>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                                <select name="YorumTipi" class="form-select form-select-sm">
                                    <option value="Genel">Genel</option>
                                    <option value="Geri Bildirim">Geri Bildirim</option>
                                    <option value="Soru">Soru</option>
                                    <option value="Onay">Onay</option>
                            </select>
                        </div>
                            <button type="submit" class="btn btn-primary btn-sm">
                            <i class="fas fa-paper-plane"></i> Gönder
                        </button>
                    </div>
                    </form>

                    <hr />

                    <!-- Mevcut Yorumlar -->
                    @if (Model.Yorumlar != null && Model.Yorumlar.Any())
                    {
                        @foreach (var yorum in Model.Yorumlar.OrderByDescending(y => y.OlusturmaTarihi))
                        {
                            <div class="card mb-3">
                                <div class="card-header">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>
                                                @if (yorum.Ogrenci != null)
                                                {
                                                    @(yorum.Ogrenci.Ad + " " + yorum.Ogrenci.Soyad)
                                                }
                                                else if (yorum.Akademisyen != null)
                                                {
                                                    @(yorum.Akademisyen.Unvan + " " + yorum.Akademisyen.Ad + " " + yorum.Akademisyen.Soyad)
                                                }
                                            </strong>
                                            <span class="badge bg-info ms-2">@yorum.YorumTipi</span>
                                        </div>
                                        <div>
                                        <small>@yorum.OlusturmaTarihi.ToShortDateString()</small>
                                            @if (User.IsInRole("Admin") || 
                                                (User.IsInRole("Akademisyen") && yorum.AkademisyenId.HasValue && User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value == yorum.AkademisyenId.Value.ToString()) ||
                                                (User.IsInRole("Ogrenci") && yorum.OgrenciId.HasValue && User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value == yorum.OgrenciId.Value.ToString()))
                                            {
                                                <form asp-action="DeleteComment" method="post" class="d-inline" onsubmit="return confirm('Bu yorumu silmek istediğinize emin misiniz?');">
                                                    <input type="hidden" name="id" value="@yorum.Id" />
                                                    <input type="hidden" name="projeId" value="@Model.Id" />
                                                    <button type="submit" class="btn btn-sm btn-link text-danger p-0 ms-2">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <p class="card-text">@yorum.Icerik</p>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">Henüz yorum yapılmamış.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Dosya Yükleme Modal -->
<div class="modal fade" id="uploadFileModal" tabindex="-1" aria-labelledby="uploadFileModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="UploadFile" method="post" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title" id="uploadFileModalLabel">Dosya Yükle</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="ProjeId" value="@Model.Id" />
                    
                    <div class="mb-3">
                        <label for="Dosya" class="form-label">Dosya</label>
                        <input type="file" id="Dosya" name="Dosya" class="form-control" required />
                    </div>
                    
                    <div class="mb-3">
                        <label for="Aciklama" class="form-label">Açıklama (Opsiyonel)</label>
                        <input type="text" id="Aciklama" name="Aciklama" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-upload me-2"></i>Yükle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Bootstrap 5 tooltip aktivasyonu
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });
            
            // 5 saniye sonra alert mesajlarını otomatik kapat
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);
        });
    </script>
} 