@model IEnumerable<UniversiteProjeYonetimSistemi.Models.Proje>

@{
    ViewData["Title"] = "Projeler";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h1>Projeler</h1>
        </div>
        <div class="col-auto">
            @if (User.IsInRole("Admin") || User.IsInRole("Akademisyen"))
            {
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Yeni Proje
                </a>
            }
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Ad)</th>
                            <th>@Html.DisplayNameFor(model => model.Status)</th>
                            <th>Öğrenci</th>
                            <th>Danışman</th>
                            <th>@Html.DisplayNameFor(model => model.Kategori.Ad)</th>
                            <th>@Html.DisplayNameFor(model => model.OlusturmaTarihi)</th>
                            <th>@Html.DisplayNameFor(model => model.TeslimTarihi)</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Ad)</td>
                            <td>
                                @{
                                    var statusClass = item.Status switch
                                    {
                                        "Beklemede" => "badge bg-secondary",
                                        "Atanmis" => "badge bg-info",
                                        "Devam" => "badge bg-primary",
                                        "Tamamlandi" => "badge bg-success",
                                        "Iptal" => "badge bg-danger",
                                        _ => "badge bg-secondary"
                                    };
                                }
                                <span class="@statusClass">@item.Status</span>
                            </td>
                            <td>@(item.Ogrenci?.Ad + " " + item.Ogrenci?.Soyad ?? "-")</td>
                            <td>@(item.Mentor?.Ad + " " + item.Mentor?.Soyad ?? "-")</td>
                            <td>@Html.DisplayFor(modelItem => item.Kategori.Ad)</td>
                            <td>@Html.DisplayFor(modelItem => item.OlusturmaTarihi)</td>
                            <td>@(item.TeslimTarihi.HasValue ? item.TeslimTarihi.Value.ToShortDateString() : "-")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    @if (User.IsInRole("Admin") || User.IsInRole("Akademisyen"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    }
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Tabloyu DataTables ile gelişmiş hale getirebilirsiniz
            // $('.table').DataTable();
        });
    </script>
} 