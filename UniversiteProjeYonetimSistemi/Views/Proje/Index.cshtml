@model IEnumerable<UniversiteProjeYonetimSistemi.Models.Proje>

@{
    ViewData["Title"] = "Projeler";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="mb-0">
            <i class="fas fa-tasks text-primary me-2"></i>@ViewData["Title"]
        </h4>
        <div>
            @if (User.IsInRole("Admin") || User.IsInRole("Akademisyen"))
            {
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i> Yeni Proje
                </a>
            }
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white py-3">
            <div class="row align-items-center gy-3">
                <div class="col-lg-8 col-md-7 col-12">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-0">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input type="text" id="searchInput" class="form-control border-0 bg-light" placeholder="Projelerde ara...">
                    </div>
                </div>
                <div class="col-lg-4 col-md-5 col-12">
                    <div class="d-flex flex-wrap gap-2 justify-content-md-end">
                        <div class="w-auto flex-grow-1" style="min-width: 140px; max-width: 200px;">
                            <select id="statusFilter" class="form-select">
                                <option value="">Tüm Durumlar</option>
                                <option value="Beklemede">Beklemede</option>
                                <option value="Atanmis">Atanmış</option>
                                <option value="Devam">Devam Ediyor</option>
                                <option value="Tamamlandi">Tamamlandı</option>
                                <option value="Iptal">İptal</option>
                            </select>
                        </div>
                        <div class="w-auto flex-grow-1" style="min-width: 140px; max-width: 200px;">
                            <select id="categoryFilter" class="form-select">
                                <option value="">Tüm Kategoriler</option>
                                @foreach (var kategori in Model.Select(p => p.Kategori).Distinct())
                                {
                                    <option value="@kategori.Ad">@kategori.Ad</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="projectsTable" class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th>Proje</th>
                            <th>Öğrenci</th>
                            <th>Danışman</th>
                            <th>Tarih</th>
                            <th class="text-end">Durum/Kategori</th>
                            <th style="min-width: 130px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="project-row" 
                            data-name="@item.Ad.ToLower()" 
                            data-status="@item.Status"
                            data-category="@item.Kategori.Ad"
                            data-student="@(item.Ogrenci?.Ad + " " + item.Ogrenci?.Soyad ?? "-")">
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="project-icon me-3">
                                        <span class="bg-light text-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                            <i class="fas fa-file-alt"></i>
                                        </span>
                                    </div>
                                    <div>
                                        <h6 class="mb-0">@item.Ad</h6>
                                        <span class="text-muted small">@(item.Aciklama?.Length > 50 ? item.Aciklama.Substring(0, 50) + "..." : item.Aciklama)</span>
                                    </div>
                                </div>
                            </td>
                            <td>
                                @if (item.Ogrenci != null)
                                {
                                    <div class="d-flex align-items-center">
                                        <div class="avatar avatar-sm bg-light text-primary rounded-circle d-flex align-items-center justify-content-center me-2">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <span>@(item.Ogrenci?.Ad + " " + item.Ogrenci?.Soyad)</span>
                                    </div>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                            <td>
                                @if (item.Mentor != null)
                                {
                                    <div class="d-flex align-items-center">
                                        <div class="avatar avatar-sm bg-light text-primary rounded-circle d-flex align-items-center justify-content-center me-2">
                                            <i class="fas fa-user-tie"></i>
                                        </div>
                                        <span>@(item.Mentor?.Ad + " " + item.Mentor?.Soyad)</span>
                                    </div>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                            <td>
                                <div>
                                    <div class="small text-muted">Oluşturma: @item.OlusturmaTarihi.ToShortDateString()</div>
                                    @if (item.TeslimTarihi.HasValue)
                                    {
                                        <div class="small">Teslim: @item.TeslimTarihi.Value.ToShortDateString()</div>
                                    }
                                </div>
                            </td>
                            <td class="text-end">
                                @{
                                    var statusClass = item.Status switch
                                    {
                                        "Beklemede" => "badge bg-secondary",
                                        "Atanmis" => "badge bg-info",
                                        "Devam" => "badge bg-primary",
                                        "Tamamlandi" => "badge bg-success",
                                        "Iptal" => "badge bg-danger",
                                        _ => "badge bg-secondary"
                                    };
                                    
                                    var statusText = item.Status switch
                                    {
                                        "Beklemede" => "Beklemede",
                                        "Atanmis" => "Atanmış",
                                        "Devam" => "Devam Ediyor",
                                        "Tamamlandi" => "Tamamlandı",
                                        "Iptal" => "İptal",
                                        _ => item.Status
                                    };
                                }
                                <div>
                                    <span class="@statusClass me-1">@statusText</span>
                                    <span class="badge bg-light text-dark">@item.Kategori.Ad</span>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex flex-column">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light w-100 mb-1 text-start">
                                        <i class="fas fa-eye text-primary me-2"></i>Görüntüle
                                    </a>
                                    @if (User.IsInRole("Admin") || User.IsInRole("Akademisyen"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light w-100 mb-1 text-start">
                                            <i class="fas fa-edit text-warning me-2"></i>Düzenle
                                        </a>
                                    }
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-light w-100 text-start">
                                            <i class="fas fa-trash text-danger me-2"></i>Sil
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
                <div id="noDataMessage" class="text-center py-5 d-none">
                    <i class="fas fa-search fa-3x text-muted mb-3"></i>
                    <h6>Aradığınız kriterlere uygun proje bulunamadı.</h6>
                    <p class="text-muted">Lütfen farklı arama kriterleri deneyin.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Arama ve filtreleme fonksiyonu
            function filterProjects() {
                const searchTerm = $('#searchInput').val().toLowerCase();
                const statusFilter = $('#statusFilter').val();
                const categoryFilter = $('#categoryFilter').val();
                
                let matchCount = 0;
                
                $('.project-row').each(function() {
                    const name = $(this).data('name');
                    const status = $(this).data('status');
                    const category = $(this).data('category');
                    const student = $(this).data('student').toLowerCase();
                    
                    const matchesSearch = name.includes(searchTerm) || student.includes(searchTerm);
                    const matchesStatus = statusFilter === '' || status === statusFilter;
                    const matchesCategory = categoryFilter === '' || category === categoryFilter;
                    
                    const shouldShow = matchesSearch && matchesStatus && matchesCategory;
                    
                    $(this).toggle(shouldShow);
                    
                    if (shouldShow) {
                        matchCount++;
                    }
                });
                
                // Sonuç bulunamadı mesajını göster/gizle
                if (matchCount === 0) {
                    $('#noDataMessage').removeClass('d-none');
                } else {
                    $('#noDataMessage').addClass('d-none');
                }
            }
            
            // Arama ve filtre olaylarını dinle
            $('#searchInput').on('keyup', filterProjects);
            $('#statusFilter, #categoryFilter').on('change', filterProjects);
            
            // Tablo satırlarına hover efekti
            $('.project-row').hover(
                function() {
                    $(this).addClass('bg-light');
                },
                function() {
                    $(this).removeClass('bg-light');
                }
            );
        });
    </script>
} 