@model IEnumerable<UniversiteProjeYonetimSistemi.Models.ProjeDosya>

@{
    ViewData["Title"] = "Proje Dosyaları";
    var projeId = Model.FirstOrDefault()?.ProjeId ?? 0;
}

<div class="container py-4 animate-header">
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm animate-card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Proje Dosyaları</h5>
                    <div class="d-flex gap-2">
                        <a asp-controller="ProjeDosya" asp-action="Add" asp-route-projeId="@projeId" class="btn btn-light btn-sm animate-button">
                            <i class="fas fa-plus me-2"></i>Dosya Ekle
                        </a>
                        <a asp-controller="Proje" asp-action="Details" asp-route-id="@projeId" class="btn btn-outline-light btn-sm animate-button">
                            <i class="fas fa-arrow-left me-2"></i>Projeye Dön
                        </a>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-file fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Henüz dosya yüklenmemiş</h5>
                            <p class="text-muted">Bu proje için henüz herhangi bir dosya yüklenmemiş.</p>
                            <a asp-controller="ProjeDosya" asp-action="Add" asp-route-projeId="@projeId" class="btn btn-primary animate-button">
                                <i class="fas fa-plus me-2"></i>İlk Dosyayı Ekle
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Dosya Adı</th>
                                        <th>Boyut</th>
                                        <th>Tür</th>
                                        <th>Yükleme Tarihi</th>
                                        <th>Yükleyen</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var dosya in Model.OrderByDescending(d => d.YuklemeTarihi))
                                    {
                                        <tr class="animate-row">
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-file me-2 text-primary"></i>
                                                    <strong>@dosya.DosyaAdi</strong>
                                                    @if (!string.IsNullOrEmpty(dosya.Aciklama))
                                                    {
                                                        <br /><small class="text-muted">@(dosya.Aciklama.Length > 50 ? dosya.Aciklama.Substring(0, 50) + "..." : dosya.Aciklama)</small>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                @{
                                                    var sizeInMB = dosya.DosyaBoyutu / 1024.0 / 1024.0;
                                                    var sizeText = sizeInMB > 1 ? $"{sizeInMB:F1} MB" : $"{dosya.DosyaBoyutu / 1024.0:F0} KB";
                                                }
                                                <span class="text-muted">@sizeText</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@dosya.DosyaTipi</span>
                                            </td>
                                            <td>
                                                @dosya.YuklemeTarihi.ToString("dd/MM/yyyy HH:mm")
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@dosya.YukleyenTipi</span>
                                                @if (ViewBag.DosyalarWithYukleyen != null)
                                                {
                                                    var dosyaWithYukleyen = ((List<object>)ViewBag.DosyalarWithYukleyen)
                                                        .FirstOrDefault(x => ((dynamic)x).Dosya.Id == dosya.Id);
                                                    if (dosyaWithYukleyen != null)
                                                    {
                                                        <br />
                                                        <small class="text-muted">@(((dynamic)dosyaWithYukleyen).YukleyenAdi)</small>
                                                    }
                                                }
                                            </td>
                                            <td>
                                                <div class="d-flex flex-column gap-1">
                                                    <a asp-controller="ProjeDosya" asp-action="Details" asp-route-id="@dosya.Id" 
                                                       class="btn btn-sm btn-outline-info">
                                                        <i class="fas fa-eye me-1"></i>Detay
                                                    </a>
                                                    <a asp-controller="ProjeDosya" asp-action="Download" asp-route-id="@dosya.Id" 
                                                       class="btn btn-sm btn-outline-success">
                                                        <i class="fas fa-download me-1"></i>İndir
                                                    </a>
                                                    @if (User.IsInRole("Admin") || User.IsInRole("Akademisyen") || ViewBag.IsCurrentUserProjectOwner == true)
                                                    {
                                                        <a asp-controller="ProjeDosya" asp-action="Delete" asp-route-id="@dosya.Id" 
                                                           class="btn btn-sm btn-outline-danger">
                                                            <i class="fas fa-trash me-1"></i>Sil
                                                        </a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .animate-row {
        transition: all 0.3s ease;
    }
    
    .animate-row:hover {
        background-color: #f8f9fa;
        transform: translateX(5px);
    }
</style> 