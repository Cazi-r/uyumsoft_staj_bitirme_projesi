@model UniversiteProjeYonetimSistemi.Models.ViewModels.ProjeDosyaViewModel
@{
    ViewData["Title"] = "Dosya Ekle";
    var projeId = Model.ProjeId;
}

<div class="container py-4 animate-header">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm animate-card">
                <div class="card-header bg-primary text-white">
                                    <h5 class="section-title">
                    <i class="fas fa-plus me-2"></i>
                    Proje Dosyası Ekle
                </h5>
                    @if (!string.IsNullOrEmpty(ViewBag.ProjeAdi))
                    {
                        <small class="d-block mt-1 opacity-75">
                            <i class="fas fa-project-diagram me-1"></i>
                            @ViewBag.ProjeAdi
                        </small>
                    }
                </div>
                <div class="card-body p-4">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-controller="ProjeDosya" asp-action="Add" method="post" enctype="multipart/form-data" class="animate-form">
                        <input type="hidden" asp-for="ProjeId" />
                        
                        <div class="mb-3">
                            <label asp-for="Dosya" class="form-label">
                                <i class="fas fa-file me-1"></i>
                                Dosya Seç *
                            </label>
                            <input asp-for="Dosya" class="form-control" type="file" 
                                   accept=".pdf,.doc,.docx,.txt,.zip,.rar,.jpg,.jpeg,.png,.gif,.xlsx,.xls,.ppt,.pptx" 
                                   required>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>
                                Desteklenen dosya türleri: PDF, Word, Text, Resim, Arşiv, Excel, PowerPoint (Maks. 50MB)
                            </div>
                            <span asp-validation-for="Dosya" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Aciklama" class="form-label">
                                <i class="fas fa-comment me-1"></i>
                                Açıklama
                            </label>
                            <textarea asp-for="Aciklama" class="form-control" rows="3" 
                                      placeholder="Dosya ile ilgili açıklama ekleyebilirsiniz..."></textarea>
                            <span asp-validation-for="Aciklama" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-controller="Proje" asp-action="Details" asp-route-id="@projeId" 
                               class="btn btn-secondary animate-button">
                                <i class="fas fa-arrow-left me-2"></i>Vazgeç
                            </a>
                                                <button type="submit" class="btn btn-primary animate-button">
                        <i class="fas fa-plus me-2"></i>Dosyayı Ekle
                    </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Dosya yükleme kuralları -->
            <div class="card border-0 shadow-sm mt-3 animate-card">
                <div class="card-header bg-warning text-dark">
                    <h6 class="mb-0">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        Dosya Ekleme Kuralları
                    </h6>
                </div>
                <div class="card-body p-3">
                    <ul class="mb-0 small text-muted">
                        <li><i class="fas fa-check-circle text-success me-1"></i>Maksimum dosya boyutu: 50MB</li>
                        <li><i class="fas fa-check-circle text-success me-1"></i>Desteklenen dosya türleri: PDF, Word, Excel, PowerPoint, Resim, Arşiv ve Metin dosyaları</li>
                        <li><i class="fas fa-check-circle text-success me-1"></i>Dosya adında özel karakterler bulunmamalıdır</li>
                        <li><i class="fas fa-check-circle text-success me-1"></i>Yüklenen dosyalar proje ile ilgili olmalıdır</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Dosya seçim kontrolü
        document.getElementById('Dosya').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                // Dosya boyutu kontrolü (50MB = 52428800 bytes)
                if (file.size > 52428800) {
                    alert('Dosya boyutu 50MB\'dan büyük olamaz!');
                    e.target.value = '';
                    return;
                }
                
                // Dosya türü kontrolü
                const allowedTypes = ['.pdf', '.doc', '.docx', '.txt', '.zip', '.rar', 
                                    '.jpg', '.jpeg', '.png', '.gif', '.xlsx', '.xls', 
                                    '.ppt', '.pptx'];
                const fileName = file.name.toLowerCase();
                const isAllowed = allowedTypes.some(type => fileName.endsWith(type));
                
                if (!isAllowed) {
                    alert('Bu dosya türü desteklenmiyor!');
                    e.target.value = '';
                    return;
                }
                
                console.log('Dosya seçildi:', file.name, 'Boyut:', (file.size / 1024 / 1024).toFixed(2) + 'MB');
            }
        });
    </script>
} 