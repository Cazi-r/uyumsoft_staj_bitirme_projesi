@model IEnumerable<UniversiteProjeYonetimSistemi.Models.ProjeAsamasi>

@{
    ViewData["Title"] = "Proje Aşamaları";
    var projeId = Model.FirstOrDefault()?.ProjeId ?? 0;
}

<div class="container py-4 animate-header">
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm animate-card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="section-title">Proje Aşamaları</h5>
                    <div>
                        <a asp-controller="Proje" asp-action="Details" asp-route-id="@projeId" class="btn btn-outline-light btn-sm animate-button">
                            <i class="fas fa-arrow-left me-2"></i>Projeye Dön
                        </a>
                        <a asp-controller="ProjeAsama" asp-action="Add" asp-route-id="@projeId" class="btn btn-light btn-sm animate-button">
                            <i class="fas fa-plus me-2"></i>Yeni Aşama Ekle
                        </a>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-tasks fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Henüz aşama eklenmemiş</h5>
                            <p class="text-muted">Bu proje için henüz herhangi bir aşama tanımlanmamış.</p>
                            <a asp-controller="ProjeAsama" asp-action="Add" asp-route-id="@projeId" class="btn btn-primary animate-button">
                                <i class="fas fa-plus me-2"></i>İlk Aşamayı Ekle
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Sıra</th>
                                        <th>Aşama Adı</th>
                                        <th>Açıklama</th>
                                        <th>Başlangıç</th>
                                        <th>Bitiş</th>
                                        <th>Durum</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var asama in Model.OrderBy(a => a.SiraNo))
                                    {
                                        <tr class="animate-row">
                                            <td>
                                                <span class="badge bg-secondary">@asama.SiraNo</span>
                                            </td>
                                            <td>
                                                <strong>@asama.AsamaAdi</strong>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(asama.Aciklama))
                                                {
                                                    <span class="text-muted">@(asama.Aciklama.Length > 50 ? asama.Aciklama.Substring(0, 50) + "..." : asama.Aciklama)</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Açıklama yok</span>
                                                }
                                            </td>
                                            <td>
                                                @(asama.BaslangicTarihi?.ToString("dd/MM/yyyy") ?? "-")
                                            </td>
                                            <td>
                                                @(asama.BitisTarihi?.ToString("dd/MM/yyyy") ?? "-")
                                            </td>
                                            <td>
                                                @if (asama.Tamamlandi)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check me-1"></i>Tamamlandı
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">
                                                        <i class="fas fa-clock me-1"></i>Devam Ediyor
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <div class="d-flex flex-column gap-1">
                                                    <a asp-controller="ProjeAsama" asp-action="Edit" asp-route-id="@asama.Id" 
                                                       class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-edit me-1"></i>Düzenle
                                                    </a>
                                                    <a asp-controller="ProjeAsama" asp-action="Delete" asp-route-id="@asama.Id" 
                                                       class="btn btn-sm btn-outline-danger">
                                                        <i class="fas fa-trash me-1"></i>Sil
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .animate-row {
        transition: all 0.3s ease;
    }
    
    .animate-row:hover {
        background-color: #f8f9fa;
        transform: translateX(5px);
    }
</style> 